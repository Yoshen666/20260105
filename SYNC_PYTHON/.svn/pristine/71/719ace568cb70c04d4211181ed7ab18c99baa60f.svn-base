                _sync_duckdb_to_pg_test_db(oracle_dbcursor=oracle_dbcursor,
                                           pg_conn=pg_conn,
                                           id=id,
                                           table_name=table_name,
                                           file_name=file_name)
        except Exception as e:
            print(e)
        finally:
            oracle_conn.commit()
            if oracle_dbcursor:
                oracle_dbcursor.close()
            if oracle_conn:
                oracle_conn.close()


