import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons, my_file


def create_temp_table(duck_db):
    pass


def GetTypeFirstSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
    INSERT  /*+ append */  INTO APS_TR_CHARGE_TIME (                                               
        GUID,TOOL_ID, CHARGE_TIME, TRACK_IN, TRACK_OUT, PARTKEY, PROCESS_START
    )                                                                                                     
     WITH DIFF_EQP AS (                                                                                         
          SELECT EQP_ID                                                                                         
          FROM APS_SYNC_ETL_TOOL.APS_SYNC_ETL_TOOL T                                                                                     
          WHERE T.MODULE ='DIFF'                                                                                
          AND T.HOST_EQP_FLAG ='Y'                                                                              
     ),                                                                                                         
     HIST_DATA AS(                                                                                              
         SELECT S.EQP_ID,                                                                                       
                S.OPE_CATEGORY,                                                                                 
                S.CTRL_JOB,                                                                                     
                CASE WHEN S.OPE_CATEGORY='OperationStart' THEN S.CLAIM_TIME ELSE NULL END AS TRACK_IN,          
                CASE WHEN S.OPE_CATEGORY='ProcessStart' THEN S.CLAIM_TIME ELSE NULL END AS PROCESS_START,       
                CASE WHEN S.OPE_CATEGORY='OperationComplete' THEN S.CLAIM_TIME ELSE NULL END AS TRACK_OUT       
         FROM APS_MID_FHOPEHS.APS_MID_FHOPEHS S                                                        
         INNER JOIN DIFF_EQP E                                                                                  
         ON E.EQP_ID = S.EQP_ID                                                                                 
         -- WHERE S.PARTKEY > (SYSDATE - 90) 原Java中View不存在该字段，但是表中有该字段，该字段的最终来源是CLAIM_TIME                                                                
         WHERE S.CLAIM_TIME > DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '90 day'
         AND S.OPE_CATEGORY IN ('OperationStart','OperationComplete','ProcessStart')                            
     ),                                                                                                         
     GROUP_DATA AS (                                                                                            
         SELECT H.EQP_ID,                                                                                       
                H.CTRL_JOB,                                                                                     
                MAX(TRACK_IN) AS TRACK_IN,                                                                      
                MAX(PROCESS_START) AS PROCESS_START,                                                            
                MAX(TRACK_OUT) AS TRACK_OUT                                                                     
         FROM HIST_DATA H                                                                                       
         GROUP BY H.EQP_ID,H.CTRL_JOB                                                                           
     ),                                                                                                         
     -----需要把前后batch作业联系起来--------                                                                    
     RESULT_DATA AS (                                                                                           
         SELECT D.EQP_ID,                                                                                       
                D.TRACK_IN,                                                                                     
                D.PROCESS_START,                                                                                
                D.TRACK_OUT,                                                                                    
                LAG(D.TRACK_IN,1,NULL) OVER(PARTITION BY EQP_ID ORDER BY D.TRACK_IN) AS NEXT_TRACK_IN,          
                LAG(D.TRACK_OUT,1,NULL) OVER(PARTITION BY EQP_ID ORDER BY D.TRACK_IN) AS NEXT_TRACK_OUT         
         FROM GROUP_DATA D                                                                                      
         WHERE D.TRACK_IN IS NOT NULL                                                                           
     )                                                                                                          
     --------前一个TrackOut时间 > 当前的track_in-------                                                          
     SELECT gen_random_uuid() AS GUID,
            EQP_ID,                                                                          
            -- TRUNC((PROCESS_START - NEXT_TRACK_OUT)*24,2) AS CHARGE_TIME, 这里计算两个时间的时间差是多少个小时，保存小数点后面2位
            round((extract(epoch from(PROCESS_START - NEXT_TRACK_OUT))) / 3600.0, 2) AS CHARGE_TIME,
            -- TO_CHAR(TRACK_IN,'YYYY-MM-DD HH24:MI:SS') AS TRACK_IN,     
            STRFTIME(TRACK_IN, '%Y-%m-%d %H:%M:%S') AS TRACK_IN,                                          
            -- TO_CHAR(NEXT_TRACK_OUT,'YYYY-MM-DD HH24:MI:SS') AS TRACK_OUT,   
            STRFTIME(NEXT_TRACK_OUT, '%Y-%m-%d %H:%M:%S') AS TRACK_OUT,                                     
            TRACK_IN AS PARTKEY,                                                                                
            -- TO_CHAR(PROCESS_START,'YYYY-MM-DD HH24:MI:SS') AS PROCESS_START
            STRFTIME(PROCESS_START, '%Y-%m-%d %H:%M:%S') AS PROCESS_START                                     
     FROM RESULT_DATA                                                                                           
     WHERE TRACK_IN >  NEXT_TRACK_IN                                                                            
     AND TRACK_IN < NEXT_TRACK_OUT                                                                              
     AND PROCESS_START > NEXT_TRACK_OUT
    """.format(uuid=uuid)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TR_CHARGE_TIME",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TR_CHARGE_TIME")


def GetTypeOtherSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name, last_db_file):
    my_duck.attach_table(duck_db_memory, 'LAST_APS_TR_CHARGE_TIME', last_db_file)

    insert_sql = """
    INSERT  /*+ append */  INTO APS_TR_CHARGE_TIME(                                                        
       GUID,TOOL_ID, CHARGE_TIME, TRACK_IN, TRACK_OUT, PARTKEY, PROCESS_START                                                                                             
    )                                                                                                              
     WITH DIFF_EQP AS (                                                                                            
          SELECT EQP_ID                                                                                            
          FROM APS_SYNC_ETL_TOOL.APS_SYNC_ETL_TOOL T                                                                                        
          WHERE T.MODULE ='DIFF'                                                                                   
          AND T.HOST_EQP_FLAG ='Y'                                                                                 
     ),                                                                                                            
     HIST_DATA AS(                                                                                                 
         SELECT S.EQP_ID,                                                                                          
                S.OPE_CATEGORY,                                                                                    
                S.CTRL_JOB,                                                                                        
                CASE WHEN S.OPE_CATEGORY='OperationStart' THEN S.CLAIM_TIME ELSE NULL END AS TRACK_IN,             
                CASE WHEN S.OPE_CATEGORY='ProcessStart' THEN S.CLAIM_TIME ELSE NULL END AS PROCESS_START,          
                CASE WHEN S.OPE_CATEGORY='OperationComplete' THEN S.CLAIM_TIME ELSE NULL END AS TRACK_OUT          
         FROM APS_MID_FHOPEHS.APS_MID_FHOPEHS S                                                           
         INNER JOIN DIFF_EQP E                                                                                     
         ON E.EQP_ID = S.EQP_ID                                                                                    
         -- WHERE S.PARTKEY > (SYSDATE - 3)
         WHERE S.PARTKEY > DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '3 day'                                                                           
         AND S.OPE_CATEGORY IN ('OperationStart','OperationComplete','ProcessStart')                               
     ),                                                                                                            
     GROUP_DATA AS (                                                                                               
         SELECT H.EQP_ID,                                                                                          
                H.CTRL_JOB,                                                                                        
                MAX(TRACK_IN) AS TRACK_IN,                                                                         
                MAX(PROCESS_START) AS PROCESS_START,                                                               
                MAX(TRACK_OUT) AS TRACK_OUT                                                                        
         FROM HIST_DATA H                                                                                          
         GROUP BY H.EQP_ID,H.CTRL_JOB                                                                              
     ),                                                                                                            
     -----需要把前后batch作业联系起来--------                                                                       
     RESULT_DATA AS (                                                                                              
         SELECT D.EQP_ID,                                                                                          
                D.TRACK_IN,                                                                                        
                D.PROCESS_START,                                                                                   
                D.TRACK_OUT,                                                                                       
                LAG(D.TRACK_IN,1,NULL) OVER(PARTITION BY EQP_ID ORDER BY D.TRACK_IN) AS NEXT_TRACK_IN,             
                LAG(D.TRACK_OUT,1,NULL) OVER(PARTITION BY EQP_ID ORDER BY D.TRACK_IN) AS NEXT_TRACK_OUT            
         FROM GROUP_DATA D                                                                                         
         WHERE D.TRACK_IN IS NOT NULL                                                                              
     ),                                                                                                            
     --------前一个TrackOut时间 > 当前的track_in-------                                                             
     CHARGE_TIME AS (                                                                                              
         SELECT EQP_ID,                                                                                            
                --TRUNC((PROCESS_START-NEXT_TRACK_OUT)*24,2) AS CHARGE_TIME,
                round((extract(epoch from(CAST(PROCESS_START AS DATETIME) - CAST(NEXT_TRACK_OUT AS DATETIME)))) / 3600.0, 2) AS CHARGE_TIME,                                         
                TRACK_IN,                                                                                          
                PROCESS_START,                                                                                     
                NEXT_TRACK_OUT AS TRACK_OUT                                                                        
         FROM RESULT_DATA                                                                                          
         WHERE TRACK_IN >  NEXT_TRACK_IN                                                                           
         AND TRACK_IN < NEXT_TRACK_OUT                                                                             
        AND PROCESS_START > NEXT_TRACK_OUT                                                                         
     )                                                                                                             
     SELECT gen_random_uuid() AS GUID,C.EQP_ID,                                                                           
            C.CHARGE_TIME,                                                                                           
            C.TRACK_IN AS TRACK_IN,   
            C.TRACK_OUT AS TRACK_OUT,                                             
            C.TRACK_IN AS PARTKEY,                                                               
            C.PROCESS_START AS PROCESS_START
     FROM CHARGE_TIME C                                                                                            
     WHERE                                                                                                         
     NOT EXISTS                                                                                                    
     (                                                                                                             
         SELECT 1                                                                                                  
         FROM LAST_APS_TR_CHARGE_TIME.APS_TR_CHARGE_TIME T                                                                              
         WHERE T.TRACK_IN = C.TRACK_IN                                        
         AND T.TOOL_ID = C.EQP_ID                                                                                  
         AND T.TRACK_OUT = C.TRACK_OUT                                          
         -- AND T.PARTKEY > SYSDATE - 5
         AND T.PARTKEY > DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '5 day'                                                                               
     )                                                                                                             
    """
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TR_CHARGE_TIME",
                     sql=insert_sql,
                     current_time=current_time,
                     update_table="APS_TR_CHARGE_TIME")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_TR_CHARGE_TIME_10M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_TR_CHARGE_TIME"
    used_table_list = ['APS_MID_FHOPEHS', 'APS_SYNC_ETL_TOOL']
    target_table_sql = """
        create table {}APS_TR_CHARGE_TIME
        (
          guid          VARCHAR(64) not null,
          tool_id       VARCHAR(64),
          charge_time   VARCHAR(64),
          track_in      VARCHAR(64),
          track_out     VARCHAR(64),
          partkey       VARCHAR(64) not null,
          process_start VARCHAR(64),
          PRIMARY KEY (GUID, PARTKEY)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名] 
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute(
                "SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        last_db_file = my_file.get_last_db_file(oracle_conn, "APS_TR_CHARGE_TIME")
        if last_db_file is None:
            GetTypeFirstSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        else:
            GetTypeOtherSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name, last_db_file)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_TR_TYPE_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()