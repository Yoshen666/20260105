# 先把针对DF的RUN货历史找出来
def GetDFRunHistSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
     INSERT INTO APS_ETL_TMP_TR_TYPE31_LOT_HIST(                               
         EQP_ID, CLAIM_TIME                                             
         )                                                                  
          SELECT DISTINCT S.EQP_ID,S.CLAIM_TIME                                
          FROM APS_MID_FHOPEHS_VIEW.APS_MID_FHOPEHS_VIEW S                                            
          WHERE position('F' in S.EQP_ID)=1                                       
          AND S.CLAIM_TIME >= DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '40 day'                                   
          AND S.OPE_CATEGORY = 'OperationComplete'                                                                   
    """

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_TMP_TR_TYPE31_LOT_HIST",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_TMP_TR_TYPE31_LOT_HIST")


# 把ETL_TOOL拆分出来
def GetToolDataSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
    INSERT INTO APS_ETL_TMP_TR_TYPE31_TOOL(                                
         TOOL_ID, TOOLG_ID, MODULE_ID                                                
         )                                                                   
          SELECT EQP_ID AS TOOL_ID,MAX(EQP_G) AS TOOLG_ID,                                                     
                 MAX(REAL_MODULE) AS MODULE_ID                                                                                    
          FROM APS_SYNC_ETL_TOOL.APS_SYNC_ETL_TOOL                                                                   
          WHERE EQP_CATEGORY <> 'Measurement'                          
          GROUP BY EQP_ID                                                                   
    """

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_TMP_TR_TYPE31_TOOL",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_TMP_TR_TYPE31_TOOL")


# 获取OCS的HIST
def GetOcsHistSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
     INSERT INTO APS_ETL_TMP_TR_TYPE31_OCS_HIST(                                                                     
         MODULE_ID, TOOLG_ID, TOOL_ID, PLAN_ID, QTY, PROCESS_START, PROCESS_ST_TIME, PROCESS_END 
        )                                                                                                     
         WITH MAIN_DATA AS (                                                                                  
               SELECT H.MTOOL_ID AS TOOL_ID,                                                                  
                      H.CJ_ID,                                                                                
                      H.JOB_SPEC_GROUP_ID AS PLAN_ID,                                                         
                      (LENGTH(H.SLOT) - LENGTH(REPLACE(H.SLOT,',',''))+1) AS QTY,                             
                      CASE WHEN H.STATUS='OpeStart' THEN H.STATUS_TIME  END AS PROCESS_START,                 
                      CASE WHEN H.STATUS='OpeStart' THEN H.PROCESS_ST_TIME  END AS PROCESS_ST_TIME,           
                      CASE WHEN H.STATUS='OpeComplete' THEN H.STATUS_TIME  END AS PROCESS_END                 
               FROM APS_TMP_OCS_MAIN_H_VIEW.APS_TMP_OCS_MAIN_H_VIEW H                                             
               WHERE H.PROCESS_ED_TIME IS NOT NULL AND H.STATUS_TIME >= DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '40 day'                             
               AND H.PROCESS_ST_TIME IS NOT NULL                                                              
         ),                                                                                                   
         GROUP_MAIN_DATA AS (                                                                                 
               SELECT MAX(TOOL_ID) AS TOOL_ID,                                                                
                      MAX(PLAN_ID) AS PLAN_ID,                                                                
                      MAX(QTY) AS QTY,                                                                        
                      MAX(PROCESS_START) AS PROCESS_START,                                                    
                      MIN(PROCESS_ST_TIME) AS PROCESS_ST_TIME,                                                
                      MAX(PROCESS_END) AS PROCESS_END                                                         
               FROM MAIN_DATA                                                                                 
               GROUP BY CJ_ID                                                                                 
         )                                                                                                    
         SELECT T.MODULE_ID,                                                                                  
                T.TOOLG_ID,                                                                                   
                M.TOOL_ID,                                                                                    
                M.PLAN_ID,                                                                                    
                M.QTY,                                                                                        
                M.PROCESS_START,                                                                              
                M.PROCESS_ST_TIME,                                                                            
                M.PROCESS_END                                                                                 
         FROM GROUP_MAIN_DATA M                                                                               
         INNER JOIN APS_ETL_TMP_TR_TYPE31_TOOL T                                                                    
         ON T.TOOL_ID = M.TOOL_ID                                                                             
         WHERE M.PROCESS_START IS NOT NULL                                                                                                                                   
    """

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_TMP_TR_TYPE31_OCS_HIST",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_TMP_TR_TYPE31_OCS_HIST")


def GetType31FirstSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
    INSERT  /*+ append */  INTO APS_TR_TYPE31 (                                               
       GUID, MODULE_ID, TOOLG_ID, TOOL_ID, PLAN_ID, QTY, PROCESS_START, PROCESS_END, PARTKEY                                                                                        
    )                                                                                                     
       WITH RESULT_DATA AS (                                                                                                                                                                                                                                                                                
            SELECT T.MODULE_ID,                                                                                           
                   T.TOOLG_ID,                                                                                            
                   T.TOOL_ID,                                                                                             
                   T.PLAN_ID,                                                                                             
                   T.QTY,                                                                                                 
                   CASE WHEN MAX(L.EQP_ID) IS NOT NULL THEN STRFTIME(MAX(cast(L.CLAIM_TIME as timestamp)), '%Y-%m-%d %H:%M:%S')            
                                       ELSE STRFTIME(cast(T.PROCESS_ST_TIME as timestamp), '%Y-%m-%d %H:%M:%S') END AS PROCESS_START,                                                     
                   --TO_CHAR(T.PROCESS_END, 'YYYY-MM-DD HH24:MI:SS') AS PROCESS_END, 
                   STRFTIME(cast(T.PROCESS_END as timestamp), '%Y-%m-%d %H:%M:%S') AS PROCESS_END,                                       
                   CASE WHEN MAX(L.EQP_ID) IS NOT NULL THEN MAX(L.CLAIM_TIME) ELSE T.PROCESS_ST_TIME END AS PARTKEY                                                                         
            FROM APS_ETL_TMP_TR_TYPE31_OCS_HIST T                                                                                    
            LEFT JOIN APS_ETL_TMP_TR_TYPE31_LOT_HIST L                                                                           
            ON L.EQP_ID = T.TOOL_ID                                                                                       
            AND L.CLAIM_TIME > T.PROCESS_START                                                                            
            AND L.CLAIM_TIME < T.PROCESS_ST_TIME                                                                                    
            WHERE  1=1 AND T.PROCESS_START IS NOT NULL                                                                    
            GROUP BY T.MODULE_ID,                                                                                         
                   T.TOOLG_ID,                                                                                            
                   T.TOOL_ID,                                                                                             
                   T.PLAN_ID,                                                                                             
                   T.QTY,                                                                                                 
                   T.PROCESS_ST_TIME,                                                                                     
                   T.PROCESS_END                                                                                          
         )                                                                                                                
         SELECT '{uuid}' AS GUID,                                                                                       
                MODULE_ID,                                                                                                
                TOOLG_ID,                                                                                                 
                TOOL_ID,                                                                                                  
                PLAN_ID,                                                                                                  
                QTY,                                                                                                      
                PROCESS_START,                                                                                            
                PROCESS_END,                                                                                              
                PARTKEY                                                                                                   
         FROM RESULT_DATA                                                                                                                                                                    
    """.format(uuid=uuid)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TR_TYPE31",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TR_TYPE31")


def GetType31OtherSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
    INSERT  /*+ append */  INTO APS_TR_TYPE31 (                                               
       GUID, MODULE_ID, TOOLG_ID, TOOL_ID, PLAN_ID, QTY, PROCESS_START, PROCESS_END, PARTKEY                                                                                        
    )                                                                                                     
       WITH RESULT_DATA AS (                                                                                                                                                                                                                                                                                
            SELECT T.MODULE_ID,                                                                                           
                   T.TOOLG_ID,                                                                                            
                   T.TOOL_ID,                                                                                             
                   T.PLAN_ID,                                                                                             
                   T.QTY,                                                                                                 
                   CASE WHEN MAX(L.EQP_ID) IS NOT NULL THEN STRFTIME(MAX(cast(L.CLAIM_TIME as timestamp)), '%Y-%m-%d %H:%M:%S')            
                                       ELSE STRFTIME(cast(T.PROCESS_ST_TIME as timestamp), '%Y-%m-%d %H:%M:%S') END AS PROCESS_START,                                                     
                   --TO_CHAR(T.PROCESS_END, 'YYYY-MM-DD HH24:MI:SS') AS PROCESS_END, 
