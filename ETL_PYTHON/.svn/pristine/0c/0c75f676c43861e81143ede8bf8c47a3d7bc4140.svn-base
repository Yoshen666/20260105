def execute():
    # 设置目标量----某个时间段完成的最小的目标量排程

    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_DEMAND_60M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_ETL_DEMAND"
    used_table_list = ['APS_TMP_LOTHISTORY',
                       'APS_SYNC_PRODUCT',
                       'APS_SYNC_RTD_MOVE_TARGET',
                       'APS_SYNC_MOVE_TARGET_RANK',
                       'APS_SYNC_SCHE_OPE_NO_MODULE_SETTING',
                       'APS_SYNC_DAILY_MOVE_TARGET',
                       'APS_SYNC_PRODUCT_INFO',
                       'APS_SYNC_ETL_TOOL']
    target_table_sql = """
        create table {}APS_ETL_DEMAND
        (
          parentid         VARCHAR(60) not null,
          toolg_id         VARCHAR(60),
          tool_id          VARCHAR(60),
          prodg_id         VARCHAR(60),
          prodg_tech       VARCHAR(60),
          prod_id          VARCHAR(60),
          plan_id          VARCHAR(60),
          step_id          VARCHAR(60),
          lot_type         VARCHAR(30),
          recipe           VARCHAR(60),
          lot_id           VARCHAR(60),
          layer            VARCHAR(60),
          stage            VARCHAR(60),
          tech_id          VARCHAR(60),
          customer         VARCHAR(60),
          pty              VARCHAR(60),
          seq              VARCHAR(60),
          target_qty       VARCHAR(60) not null,
          target_shift     VARCHAR(3),
          target_time_from VARCHAR(60),
          target_time      VARCHAR(60),
          target_mode      VARCHAR(60),
          update_time      VARCHAR(60) not null,
          partcode         VARCHAR(60) not null,
          control_flag     VARCHAR(1),
          done_qty         VARCHAR(60)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit: # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute("SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path,'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################
        # 现在累计完成WIP数，只有TrcakOut才算
        # ①OPE_NO和PRODG_ID 组合

        aps_etl_demand_60m_helper.GetGroupByProdgIdType2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdgIdType3T1Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdgIdType3T2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdgIdType4T1Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdgIdType4T2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdgIdType4T3Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        # ②OPE_NO和PROD_TECH 组合
        aps_etl_demand_60m_helper.GetGroupByProdTechType2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdTechType3T1Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdTechType3T2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdTechType4T1Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdTechType4T2Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetGroupByProdTechType4T3Sql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        
        # 获取DemandSql信息,放入TEMP表
        aps_etl_demand_60m_helper.GetDemandSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        aps_etl_demand_60m_helper.GetDemandByOtherDaySql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取系统自动产生By Prod_tech资料信息
        aps_etl_demand_60m_helper.GetDemandByProdTechSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 次日的By Prod_tech资料信息
        aps_etl_demand_60m_helper.GetProdTechByOtherDaySql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        # 获取DemandSql信息，全部放入
        aps_etl_demand_60m_helper.GetDemandAllSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取DemandSql信息，全部为MAX_MOVE_FLAG='Y'
        aps_etl_demand_60m_helper.GetDemandByMaxMoveFlagSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取系统自动产生的TGT资料信息
        aps_etl_demand_60m_helper.GetDemandTGTSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取系统自动产生By Prod_tech资料信息，全部放入
        aps_etl_demand_60m_helper.GetDemandByProdTechAllSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取系统自动产生By Prod_tech资料信息，只针对黄光区域的控货
        aps_etl_demand_60m_helper.GetDemandByProdTechFlagSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        if config.g_copy_to_pg:
            select_sql_in_duck = """select parentid,toolg_id,prodg_id,prodg_tech,prod_id,plan_id,step_id,tool_id,lot_type,   
                                           recipe, lot_id, layer, stage, tech_id,customer,pty,seq,target_qty,target_shift,
                                           target_time_from,target_time,target_mode,update_time,control_flag from APS_ETL_DEMAND
                                 """
            postgres_table_define = """etl_demand(parentid,toolg_id,prodg_id,prodg_tech,prod_id,plan_id,step_id,tool_id,lot_type,   
                                                  recipe, lot_id, layer, stage, tech_id,customer,pty,seq,target_qty,target_shift,
                                                  target_time_from,target_time,target_mode,update_time,control_flag)
                                    """
            my_postgres.copy_duckdb_to_postgres(uuid=uuid,
                                                duckdb=duck_db_memory,
                                                table_name_in_duckdb=target_table,
                                                table_name_in_pg="etl_demand",  # 要小写
                                                select_sql_in_duck=select_sql_in_duck,
                                                postgres_table_define=postgres_table_define)

        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_ETL_DEMAND_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit: # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path,'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path,'duck_temp', uuid))
        gc.collect() # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()