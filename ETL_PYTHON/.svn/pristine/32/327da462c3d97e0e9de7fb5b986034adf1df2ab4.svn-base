def biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    # 获取ETL处理后的Qtime flow, FIRST_VALUE取Qtime区间第一笔数据, LAST_VALUE取Qtime区间最后一笔Step_Id
    sql = """
          INSERT INTO APS_TMP_DATALOSS_QTIME_CONTRAINTS                                                                                                                                                        
                   (PRODSPEC_ID,FLOW_KEY,FROM_OPE_NO,TO_OPE_NO,FROM_SEQ,TO_SEQ)                                                                                                                                                                  
                   WITH QTIME_CS AS                                                                                                                                                      
                    (SELECT B.PRODSPEC_ID,                                                                                                                                               
                            B.FLOW_KEY,                                                                                                                                                  
                            FROM_OPE_NO,                                                                                                                                                 
                            TO_OPE_NO,                                                                                                                                                   
                            FIRST_VALUE(A.STEP_ID IGNORE NULLS)                                                                                                                          
                            OVER(PARTITION BY A.PROD_ID, A.PLAN_ID, B.FROM_OPE_NO, B.TO_OPE_NO ORDER BY A.STEP_ID ROWS BETWEEN UNBOUNDED PRECEDING AND UNBOUNDED FOLLOWING) FROM_SEQ,    
                            LAST_VALUE(A.STEP_ID IGNORE NULLS)                                                                                                                           
                            OVER(PARTITION BY A.PROD_ID, A.PLAN_ID, B.FROM_OPE_NO, B.TO_OPE_NO ORDER BY A.STEP_ID ROWS BETWEEN UNBOUNDED PRECEDING AND UNBOUNDED FOLLOWING) TO_SEQ       
                       FROM APS_ETL_FLOW.APS_ETL_FLOW A, APS_SYNC_QTIME_CONSTRAINT.APS_SYNC_QTIME_CONSTRAINT B                                                                                                                  
                      WHERE A.PLAN_ID = B.FLOW_KEY                                                                                                                                       
                        AND A.PROD_ID = B.PRODSPEC_ID                                                                                                                                    
                        AND (A.OPE_NO = B.FROM_OPE_NO OR A.OPE_NO = B.TO_OPE_NO))                                                                                                                                         
                   SELECT PRODSPEC_ID, FLOW_KEY, FROM_OPE_NO, TO_OPE_NO, FROM_SEQ, TO_SEQ                                                                                                
                     FROM QTIME_CS                                                                                                                                                       
                    GROUP BY PRODSPEC_ID, FLOW_KEY, FROM_OPE_NO, TO_OPE_NO, FROM_SEQ, TO_SEQ                                                                                                                                                                                                     
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_DATALOSS_QTIME_CONTRAINTS",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_DATALOSS_QTIME_CONTRAINTS")


def biz_method_02(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    # 根据ETL_WIP获取QTIME的起止站点区间数据
    sql = """
           INSERT INTO APS_TMP_DATALOSS_LOT_QT_CONSTRAINT                                                                  
                    (LOT_ID,STEP_ID,OPE_NO,TARGET_STEP_ID,TARGET_OPE_NO,PRODG_ID,PROD_ID,
                       TARGET_PROD_ID,PLAN_ID,TARGET_PLAN_ID,LOT_TYPE,FROM_OPE_NO,FROM_SEQ,TO_OPE_NO,TO_SEQ)                                                                             
                      SELECT W.LOT_ID,                                                                 
                             W.STEP_ID,                                                                
                             W.OPE_NO,                                                                 
                             W.TARGET_STEP_ID,                                                         
                             W.TARGET_OPE_NO,                                                          
                             W.PRODG_ID,                                                               
                             W.PROD_ID,                                                                
                             W.TARGET_PROD_ID,                                                         
                             W.PLAN_ID,                                                                
                             W.TARGET_PLAN_ID,                                                         
                             W.LOT_TYPE,                                                               
                             X.FROM_OPE_NO,                                                            
                             X.FROM_SEQ,                                                               
                             X.TO_OPE_NO,                                                              
                             X.TO_SEQ                                                                  
                        FROM APS_ETL_WIP.APS_ETL_WIP W, APS_TMP_DATALOSS_QTIME_CONTRAINTS X                                                                
                       WHERE W.PROD_ID = X.PRODSPEC_ID                                                 
                         AND W.PLAN_ID = X.FLOW_KEY                                                    
                         AND W.TARGET_STEP_ID >= X.FROM_SEQ                                            
                         AND W.TARGET_STEP_ID <= X.TO_SEQ                                              
                         AND W.LOT_STATUS = 'WAIT'                                                                                                                                                                                                 
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_DATALOSS_LOT_QT_CONSTRAINT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_DATALOSS_LOT_QT_CONSTRAINT")

def biz_method_03(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    # 获取Qtime起止站点区间内的所有站点信息
    sql = """
          INSERT INTO APS_TMP_DATALOSS_FLOW_LOT_QT                                                                     
                   (WHOLE_STEP_ID,WHOLE_OPE_NO,LOT_ID,STEP_ID,OPE_NO,TARGET_STEP_ID,TARGET_OPE_NO,PRODG_ID,
                    PROD_ID,TARGET_PROD_ID,PLAN_ID,TARGET_PLAN_ID,LOT_TYPE,FROM_OPE_NO,FROM_SEQ,TO_OPE_NO,TO_SEQ)                                                                               
                   SELECT Y.STEP_ID        WHOLE_STEP_ID,                                             
                          Y.OPE_NO         WHOLE_OPE_NO,                                              
                          z.LOT_ID,                                                                   
                          z.STEP_ID,                                                                  
                          z.OPE_NO,                                                                   
                          z.TARGET_STEP_ID,                                                           
                          z.TARGET_OPE_NO,                                                            
                          z.PRODG_ID,                                                                 
                          z.PROD_ID,                                                                  
                          z.TARGET_PROD_ID,                                                           
                          z.PLAN_ID,                                                                  
                          z.TARGET_PLAN_ID,                                                           
                          z.LOT_TYPE,                                                                 
                          z.FROM_OPE_NO,                                                              
                          z.FROM_SEQ,                                                                 
                          z.TO_OPE_NO,                                                                
                          z.TO_SEQ                                                                    
                     FROM APS_ETL_FLOW.APS_ETL_FLOW Y, APS_TMP_DATALOSS_LOT_QT_CONSTRAINT Z                                                                  
                    WHERE Y.PROD_ID = Z.PROD_ID                                                       
                      AND Y.PLAN_ID = Z.PLAN_ID                                                       
                      AND Y.STEP_ID >= Z.FROM_SEQ                                                      
                      AND Y.STEP_ID <= Z.TO_SEQ                                                                                                                                                                                            
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_DATALOSS_FLOW_LOT_QT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_DATALOSS_FLOW_LOT_QT")


def biz_method_04(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    # 分组排序Qtime区间站点，查询在Qtime区间内超过三天未操作的Lot（RTD_QTIME_DATA_LOSS)
    sql = """
         INSERT INTO APS_TMP_DATALOSS_LOT_QT_HIS                                                                                                                
                    (WHOLE_STEP_ID,WHOLE_OPE_NO,FROM_SEQ,TO_SEQ,LOT_ID,STEP_ID,OPE_NO,TARGET_OPE_NO,
                     TARGET_STEP_ID,PROD_ID,TARGET_PROD_ID,PLAN_ID,TARGET_PLAN_ID,RNO,LOT_ID_HIS)                                                                                                                          
                    WITH MID_LOTHIS AS (                                                                                                          
                      SELECT S.LOT_ID,S.OPE_NO,S.PRODSPEC_ID FROM  APS_MID_FHOPEHS.APS_MID_FHOPEHS S WHERE S.CLAIM_TIME >= DATE_TRUNC('day', CURRENT_DATE) - INTERVAL '3 day'                                            
                    ),                                                                                                                            
                    QTIME_DATA AS (                                                                                                               
                        SELECT                                                                                                                    
                            R.WHOLE_STEP_ID,                                                                                                      
                            R.WHOLE_OPE_NO,                                                                                                       
                            R.FROM_SEQ,                                                                                                           
                            R.TO_SEQ,                                                                                                             
                            R.LOT_ID,                                                                                                             
                            R.STEP_ID,                                                                                                            
                            R.OPE_NO,                                                                                                             
                            R.TARGET_OPE_NO,                                                                                                      
                            R.TARGET_STEP_ID,                                                                                                     
                            R.PROD_ID,                                                                                                            
                            R.TARGET_PROD_ID,                                                                                                     
                            R.PLAN_ID,                                                                                                            
                            R.TARGET_PLAN_ID,                                                                                                     
                            ROW_NUMBER() OVER (PARTITION BY R.LOT_ID,R.PROD_ID,R.STEP_ID,R.TARGET_STEP_ID  ORDER BY STEP_ID,S.LOT_ID) AS RNO,     
                            S.LOT_ID AS LOT_ID_HIS                                                                                                
                         FROM APS_TMP_DATALOSS_FLOW_LOT_QT R ,MID_LOTHIS S                                                                                                  
                        WHERE R.PROD_ID=S.PRODSPEC_ID                                                                                             
                        AND R.WHOLE_OPE_NO=S.OPE_NO                                                                                               
                    )                                                                                                                             
                    SELECT WHOLE_STEP_ID,WHOLE_OPE_NO,FROM_SEQ,TO_SEQ,LOT_ID,STEP_ID,OPE_NO,TARGET_OPE_NO,
                     TARGET_STEP_ID,PROD_ID,TARGET_PROD_ID,PLAN_ID,TARGET_PLAN_ID,RNO,LOT_ID_HIS                                                                                                                   
                    FROM QTIME_DATA                                                                                                               
                    WHERE RNO=1                                                                                                                                                                                                                                                     
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_DATALOSS_LOT_QT_HIS",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_DATALOSS_LOT_QT_HIS")


def biz_method_05(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
     INSERT INTO APS_MID_RTDQTIME_DATALOSS                                                      
             (PARENTID,LOT_ID,FROM_QTSTEP_SEQ,TO_QTSTEP_SEQ,OPE_NO,STEP_ID,TARGET_OPE_NO,
             TARGET_STEP_ID,PROD_ID,TARGET_PROD_ID,PLAN_ID,TARGET_PLAN_ID,QTIME_ISSUE,UPDATE_TIME,PARTCODE)                                                                   
             WITH RESULT_DATA AS (                                                                                                                                                      
                 SELECT LOT_ID,                                                                                                                   
                        FROM_SEQ FROM_QTSTEP_SEQ,                                                                                                 
                        TO_SEQ TO_QTSTEP_SEQ,                                                                                                     
                        OPE_NO,STEP_ID,                                                                                                           
                        TARGET_OPE_NO,                                                                                                            
                        TARGET_STEP_ID,                                                                                                           
                        PROD_ID,                                                                                                                  
                        TARGET_PROD_ID,                                                                                                           
                        PLAN_ID,                                                                                                                  
                        TARGET_PLAN_ID,                                                                                                           
                        ROW_NUMBER() OVER(PARTITION BY C.LOT_ID,C.TARGET_PROD_ID,C.STEP_ID,C.TARGET_STEP_ID  ORDER BY FROM_SEQ,TO_SEQ) AS RN,                                       
                        'RTD_DATA_LOSS ( QTIME_EQP_LOADING)'  QTIME_ISSUE                                                                         
                 FROM APS_TMP_DATALOSS_LOT_QT_CONSTRAINT C                                                                                                                        
                 WHERE NOT EXISTS (                                                                                                               
                       SELECT 1                                                                                                                   
                       FROM APS_TMP_DATALOSS_LOT_QT_HIS H                                                                                                                  
                       WHERE C.LOT_ID = H.LOT_ID                                                                                                  
                       AND C.TARGET_PROD_ID = H.TARGET_PROD_ID                                                                                    
                       AND C.STEP_ID=H.STEP_ID                                                                                                    
                       AND C.TARGET_STEP_ID = H.TARGET_STEP_ID  )                                                                                 
                       AND (SUBSTR(C.TARGET_OPE_NO,4,1) ='W'                                                                                      
                       OR SUBSTR(C.TARGET_OPE_NO,4,1) ='F'  )                                                                                     
             )                                                                                                                                    
             SELECT '{uuid}' ,                                                                                                                         
                    LOT_ID,                                                                                                                       
                    FROM_QTSTEP_SEQ,                                                                                                              
                    TO_QTSTEP_SEQ,                                                                                                                
                    OPE_NO,STEP_ID,                                                                                                               
                    TARGET_OPE_NO,                                                                                                                
                    TARGET_STEP_ID,                                                                                                               
                    PROD_ID,                                                                                                                      
                    TARGET_PROD_ID,                                                                                                               
                    PLAN_ID,                                                                                                                      
                    TARGET_PLAN_ID,                                                                                                               
                    QTIME_ISSUE,                                                                                                                  
                    '{current_time}',                                                                                                                         
                    ''                                                                                                                          
             FROM RESULT_DATA                                                                                                                     
            -- 目前只看WAIT和Onhand站点的情况
             WHERE RN=1   AND STEP_ID = TARGET_STEP_ID                                                                                                                                                                                                                                           
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_MID_RTDQTIME_DATALOSS",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_MID_RTDQTIME_DATALOSS")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_RTD_DATA_LOSS_5M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_MID_RTDQTIME_DATALOSS"
    used_table_list = ['APS_ETL_FLOW',
                       'APS_MID_FHOPEHS',
                       'APS_ETL_WIP',
                       'APS_SYNC_QTIME_CONSTRAINT']
    target_table_sql = """
    create table {}APS_MID_RTDQTIME_DATALOSS
    (
        parentid        VARCHAR(32) not null,
        lot_id          VARCHAR(60) not null,
        from_qtstep_seq VARCHAR(60),
        to_qtstep_seq   VARCHAR(60),
        ope_no          VARCHAR(60),
        step_id         VARCHAR(60),
        target_ope_no   VARCHAR(60),
        target_step_id  VARCHAR(60),
        prod_id         VARCHAR(60),
        target_prod_id  VARCHAR(60),
        plan_id         VARCHAR(60),
        target_plan_id  VARCHAR(60),
        qtime_issue     VARCHAR(128),
        update_time     VARCHAR(60) not null,
        partcode        VARCHAR(64) not null
    )
    """.format("")  # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute("SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        biz_method_02(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        biz_method_03(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        biz_method_04(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        biz_method_05(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file,
                                   cons_error_code.APS_ETL_RLS_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        gc.collect()  # 内存释放

if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()