import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code


def create_temp_table(duck_db):
    pass


def InsertAllType31LinearRegression2Temp(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
        INSERT /*+ append */ INTO APS_MID_TYPE31_RUNTIME_ALL(              
            PARENTID,MODULE_ID, TOOLG_ID, TOOL_ID, PLAN_ID, LESSTHAN20_FLAG,TRACKER_ZWS_FLAG, ONE_WAFER_PT_TRACKER, 
            TRACKER_SLOPE_NEW, TRACKER_INTER_NEW,UPDATE_TIME,PARTCODE  
            )                                                                          
            WITH TYPE221_LR_FIRST1 AS (                                                                                                                                          
                 SELECT O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.QTY, O.PLAN_ID, O.TRACKER_PT                                                                                                
                       , ROUND((REGR_SLOPE(CAST(O.TRACKER_PT AS DECIMAL), CAST(O.QTY AS DECIMAL)) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID) * CAST(O.QTY AS DECIMAL) +                                      
                                REGR_INTERCEPT(CAST(O.TRACKER_PT AS DECIMAL), CAST(O.QTY AS DECIMAL)) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID)),6) AS PT_Y_TRACKER                                  
                       , COUNT(1) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID) AS CNT_OLD                                                                             
                       , CASE WHEN COUNT(1) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID) < 10                                                                         
                              THEN 'Y'                                                                                                                                         
                              ELSE 'N'                                                                                                                                         
                         END AS LESSTHAN20_FLAG                                                                                                                                
                       , CASE WHEN MAX(O.QTY) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID) = MIN(O.QTY) OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID)         
                              THEN 'Y'                                                                                                                                         
                              ELSE 'N'                                                                                                                                         
                         END AS SAMEQTY_FLAG_ZWS                                                                                                                                
                         ,ROUND(CAST(O.TRACKER_PT AS DECIMAL) / CAST(O.QTY AS DECIMAL), 5) AS ONE_WAFER_PT_TRACKER                                                                                                                                
                 FROM (SELECT A.MODULE_ID, A.TOOLG_ID, A.TOOL_ID, A.QTY, A.PLAN_ID,    
                              round((extract(epoch from(CAST(A.PROCESS_END AS TIMESTAMP) - CAST(A.PROCESS_START AS TIMESTAMP))))/3600.0, 3)                                                                                                                                                                                                                                                                 
                              AS TRACKER_PT                                                                                                                                                                                                                                        
                         FROM APS_TR_TYPE31.APS_TR_TYPE31 A                                                                                                                                  
                         WHERE A.PROCESS_START >= STRFTIME(DATE_TRUNC('second', CURRENT_TIMESTAMP) - INTERVAL '180 day', '%Y-%m-%d %H:%M:%S')          
                               AND A.BATCH_FLAG = 'N'                                                       
                       ) O                                                                                                                                                     
            ),                                                                                                                                                                   
            TYPE221_LR_FIRST_ZWS AS (                                                                                                                                            
                 SELECT O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID, O.SAMEQTY_FLAG_ZWS, O.LESSTHAN20_FLAG                                                                   
                        ,AVG(O.ONE_WAFER_PT_TRACKER) AS ONE_WAFER_PT_TRACKER                                                                                                   
                 FROM (                                                                                                                                                        
                           SELECT O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID, O.ONE_WAFER_PT_TRACKER, O.SAMEQTY_FLAG_ZWS, O.LESSTHAN20_FLAG                                 
                           FROM (                                                                                                                                              
                                   SELECT A.*                                                                                                                                  
                                        ,MEDIAN(RN) OVER(PARTITION BY A.MODULE_ID, A.TOOLG_ID, A.TOOL_ID, A.PLAN_ID) MED                                                       
                                   FROM (                                                                                                                                      
                                           SELECT O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID, O.SAMEQTY_FLAG_ZWS, O.LESSTHAN20_FLAG                                         
                                                 ,O.ONE_WAFER_PT_TRACKER                                                                                                       
                                                 ,ROW_NUMBER() OVER(PARTITION BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID ORDER BY O.ONE_WAFER_PT_TRACKER) RN             
                                           FROM TYPE221_LR_FIRST1 O                                                                                                            
                          ) A                                                                                                                                                  
                                ) O                                                                                                                                            
                           WHERE ABS(RN - MED) <= 0.5                                                                                                                          
                       ) O                                                                                                                                                     
                GROUP BY O.MODULE_ID, O.TOOLG_ID, O.TOOL_ID, O.PLAN_ID, O.SAMEQTY_FLAG_ZWS, O.LESSTHAN20_FLAG                                                                  
            )                                                                                                                                                                   
            SELECT '{uuid}'  AS PARENTID,                                                                                                                           
                  S.MODULE_ID, S.TOOLG_ID, S.TOOL_ID, S.PLAN_ID, S.LESSTHAN20_FLAG,                                                                                            
                  '' AS TRACKER_ZWS_FLAG,                                                                                                                                      
                  S.ONE_WAFER_PT_TRACKER,                                                                                                                                      
                  null AS TRACKER_SLOPE_NEW,                                                                                                                                     
                  null AS TRACKER_INTER_NEW,                                                                                                                                     
                  '{current_time}' AS UPDATE_TIME,                                                                                                                   
                  '' AS PARTCODE                                                                                                             
            FROM TYPE221_LR_FIRST_ZWS S                                                                                                                                         
    """.format(uuid=uuid, current_time=current_time)
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_MID_TYPE31_RUNTIME_ALL",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_MID_TYPE31_RUNTIME_ALL")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_MID_TYPE_RUNTIME_1D_APS_MID_TYPE31_RUNTIME_ALL"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_MID_TYPE31_RUNTIME_ALL"
    used_table_list = ['APS_TR_TYPE31']
    target_table_sql = """
        create table {}APS_MID_TYPE31_RUNTIME_ALL
        (
            parentid             VARCHAR(64),
            module_id            VARCHAR(64),
            toolg_id             VARCHAR(64),
            tool_id              VARCHAR(64),
            plan_id              VARCHAR(64),
            lessthan20_flag      VARCHAR(64),
            tracker_zws_flag     VARCHAR(64),
            one_wafer_pt_tracker DECIMAL,
            tracker_slope_new    DECIMAL,
            tracker_inter_new    DECIMAL,
            update_time          VARCHAR(64),
            partcode             VARCHAR(32)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)

        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 4')
        if not os.path.exists(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)):
            os.makedirs(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid))
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------

        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        InsertAllType31LinearRegression2Temp(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory, in_process_db_file=in_process_db_file, target_table=target_table, current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_MID_TYPE_RUNTIME_1D_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        # 删除TMP目录:LQN:2023/08/21
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()