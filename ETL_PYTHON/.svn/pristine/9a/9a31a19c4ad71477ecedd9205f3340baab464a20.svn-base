import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons, my_postgres


def create_temp_table(duck_db):
    '''
    这里在内存中创建使用到的临时表
    '''
    sql = """
    create table APS_TMP_ETL_VC_RECORD_WIP
    (
        LOT_ID     VARCHAR(20), 
        OPE_NO     VARCHAR(10)
    )
    """
    duck_db.sql(sql)
    sql = """
    create table APS_TMP_ETL_VC_RECORD_SGS
    (
        LOT_ID         VARCHAR(64),                                                 
        EQP_G          VARCHAR(64),                                                  
        PHOTO_EQP_ID   VARCHAR(1024),                                           
        CURRENT_SGS_WEIGHT VARCHAR(10),                                     
        WAFER_QTY       VARCHAR(10),                                             
        CURRENT_SGS_GROUP VARCHAR(64),                                      
        OPE_NO      VARCHAR(64)       
    )
    """
    duck_db.sql(sql)


def GetRecordSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
        INSERT  /*+ append */  INTO APS_ETL_VC_RECORD(          
        PARENTID, LOT_ID, TOOLG_ID, TOOL_ID, REST_TIME, QTY,UPDATE_TIME, PARTCODE, VC_GROUP                                                  
        )                                                                
         SELECT '{uuid}' AS PARENTID,                      
                LW.LOT_ID AS LOT_ID,                                                     
                MAX(LW.EQP_G) AS TOOLG_ID,                                     
                MAX(LW.PHOTO_EQP_ID) AS TOOL_ID,                               
                MAX(LW.CURRENT_SGS_WEIGHT) AS REST_TIME,                       
                MAX(LW.WAFER_QTY) AS QTY,                                    
                '{current_time}' AS UPDATE_TIME,                   
                '' AS PARTCODE,             
                MAX(LW.CURRENT_SGS_GROUP) AS VC_GROUP                          
         FROM APS_TMP_ETL_VC_RECORD_SGS  LW                                
         INNER JOIN APS_TMP_ETL_VC_RECORD_WIP W                             
                ON LW.LOT_ID = W.LOT_ID AND LW.OPE_NO = W.OPE_NO                
         GROUP BY LW.LOT_ID                                    
    """.format(uuid=uuid, current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_VC_RECORD",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_VC_RECORD")

# 先保存V_ETL_WIP
def GetWipSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
     INSERT /*+ APPEND */                                             
     INTO  APS_TMP_ETL_VC_RECORD_WIP                                
      (LOT_ID, 
       OPE_NO)                                                    
      SELECT  A.LOT_ID AS LOT_ID,                                        
              A.OPE_NO AS OPE_NO                                             
        FROM  APS_SYNC_WIP.APS_SYNC_WIP AS A                                                                                                         
    """.format()

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_VC_RECORD_WIP",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_VC_RECORD_WIP")

def GetSgsSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
       INSERT /*+ APPEND */                                            
         INTO  APS_TMP_ETL_VC_RECORD_SGS                               
              ( LOT_ID, 
                EQP_G,
                PHOTO_EQP_ID, 
                CURRENT_SGS_WEIGHT, 
                WAFER_QTY, 
                CURRENT_SGS_GROUP, 
                OPE_NO)                                                    
           SELECT   A.LOT_ID,   
                    A.EQP_G,    
                    A.PHOTO_EQP_ID,  
                    A.CURRENT_SGS_WEIGHT, 
                    A.WAFER_QTY,                                          
                    A.CURRENT_SGS_GROUP,                                   
                    A.OPE_NO                              
            FROM  APS_SYNC_SGS_LOT_WIP.APS_SYNC_SGS_LOT_WIP AS A                       
            """.format()

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_VC_RECORD_SGS",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_VC_RECORD_SGS")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_VC_RECORD_10M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_ETL_VC_RECORD"
    used_table_list = ['APS_SYNC_WIP',
                       'APS_SYNC_SGS_LOT_WIP']
    target_table_sql = """
        create table {}APS_ETL_VC_RECORD
        (
                PARENTID  VARCHAR(60) NOT NULL , 
                LOT_ID VARCHAR(60) NOT NULL, 
                TOOLG_ID VARCHAR(60) NOT NULL, 
                TOOL_ID VARCHAR(60) NOT NULL, 
                REST_TIME  VARCHAR(60) NOT NULL,
                QTY         VARCHAR(60)  NOT NULL ,
                UPDATE_TIME  TIMESTAMP NOT NULL,
                PARTCODE VARCHAR(60) NOT NULL, 
                VC_GROUP VARCHAR(60),
                PRIMARY KEY (PARENTID, LOT_ID, PARTCODE)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute(
                "SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        # 先保存V_ETL_WIP
        GetWipSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        # 再保存V_SGS_LOT_WIP
        GetSgsSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        # row_count = my_duck.get_row_count_in_duckdb(duck_db=duck_db_memory, tableName="APS_TMP_ETL_VC_RECORD_SGS")
        # if row_count == 0:
        #     my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time, "APS_TMP_ETL_VC_RECORD_SGS没有数据，请及时确认一下！！")
        #     return

        # 获取RecordSql信息
        GetRecordSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        if config.g_copy_to_pg:
            select_sql_in_duck =  """select PARENTID, LOT_ID, TOOLG_ID, TOOL_ID, REST_TIME, QTY, UPDATE_TIME, VC_GROUP from APS_ETL_VC_RECORD
            """
            postgres_table_define = """etl_vc_record(PARENTID, LOT_ID, TOOLG_ID, TOOL_ID, REST_TIME, QTY, UPDATE_TIME, VC_GROUP)
            """
            my_postgres.copy_duckdb_to_postgres(uuid=uuid,
                                                duckdb=duck_db_memory,
                                                table_name_in_duckdb=target_table,
                                                table_name_in_pg="etl_vc_record", # 要小写
                                                select_sql_in_duck=select_sql_in_duck,
                                                postgres_table_define=postgres_table_define)

        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_ETL_VC_RECORD_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()