def getSql(ETL_Proc_Name, oracle_conn, duck_db_memory, uuid, current_time):
    sql = """
    INSERT  /*+ append */  INTO APS_ETL_PRI_WIP (                                                                                             
           PARENTID,TOOLG_ID, LOT_ID, PRI_TYPE, PROD_ID,TARGET_PLAN_ID,TARGET_STEP_ID,LAYER,STAGE,UPDATE_TIME,PARTCODE                                                                       
    )                                                                                                                                              
     WITH WIP_DATA AS(                                                                                                                              
          SELECT W.PROD_ID AS PROD_ID,                                                                                                              
                 W.LOT_ID AS LOT_ID                                                                                                                 
          FROM APS_ETL_WIP.APS_ETL_WIP W                                                                   
     ),                                                                                                                                             
    SHR_PRI AS (                                                                                                                                    
           SELECT                                                                                                                                   
               SP.lot_id,                                                                                                                               
               SP.lot_purpose AS LOT_PURPOSE,                                                                                                           
               SP.pri                                                                                                                                   
           FROM APS_SYNC_SHR_PRI.APS_SYNC_SHR_PRI SP                                         
     ),                                                                                                                                             
     SHL_LOT_FIRE_NUMBER AS (                                                                                                                       
           SELECT FN.LOT_ID,                                                                                                                        
                  'FIRE '||FN.SHL_FireNumber AS LOT_PURPOSE,                                                                                        
                  ROW_NUMBER() OVER(PARTITION BY LOT_ID, END_OPE_NO ORDER BY UPDATE_TIME DESC) AS RNT                                               
           FROM APS_SYNC_SHL_LOT_FIRE_NUMBER.APS_SYNC_SHL_LOT_FIRE_NUMBER FN                                      
     ),                                                                                                                                             
     CUT_LINE AS (                                                                                                                                  
           SELECT CASE WHEN POSITION('.' IN C.LOT_ID)>0 THEN REPLACE(C.lot_id,'.','') END AS LOT_ID,                                                      
                  'CUT LINE' AS LOT_PURPOSE                                                                                                         
           FROM APS_SYNC_CUT_LINE.APS_SYNC_CUT_LINE C                                                                                                                                                                                                            
     ),                                                                                                                                             
     SELECT_LOT AS (                                                                                                                                
           SELECT SL.LOTID AS LOT_ID,                                                      
                  CASE WHEN (SL.RANK = 5) THEN 'MFG SELECT'                                                                                         
                       ELSE 'PC SELECT'                                                                                                             
                       END AS LOT_PURPOSE                                                                                                           
           FROM APS_SYNC_SELECT_LOT.APS_SYNC_SELECT_LOT SL                                                                                                                        
     ),                                                                                                                                             
     LOT_PURPOSE AS(                                                                                                                                
            SELECT                                                                                                                                  
            LP.LOT_ID AS LOT_ID,                                                                                                                    
            LP.LOT_PURPOSE AS LOT_PURPOSE                                                                                                           
           FROM APS_SYNC_LOT_PURPOSE.APS_SYNC_LOT_PURPOSE LP                                                                                                                                                
     ),                                                                                                                                             
     ALL_DATA AS (                                                                                                                                  
             SELECT SP.lot_id,SP.lot_purpose,'' AS LAYER,'' AS STAGE FROM SHR_PRI SP                                                                
             UNION ALL                                                                                                                              
             SELECT FN.LOT_ID, FN.LOT_PURPOSE,'' AS LAYER,'' AS STAGE FROM SHL_LOT_FIRE_NUMBER FN WHERE RNT = 1                                     
             UNION ALL                                                                                                                              
             SELECT CL.lot_id, CL.LOT_PURPOSE,'' AS LAYER,'' AS STAGE FROM CUT_LINE CL                                                              
             UNION ALL                                                                                                                              
             SELECT SL.LOT_ID, SL.LOT_PURPOSE,'' AS LAYER,'' AS STAGE FROM SELECT_LOT SL                                                            
             UNION ALL                                                                                                                              
             SELECT LP.LOT_ID, LP.LOT_PURPOSE,'' AS LAYER,'' AS STAGE FROM LOT_PURPOSE LP                                                           
             UNION ALL                                                                                                                              
             SELECT PS.LOT_ID, PS.LOT_PURPOSE, SUBSTRING(PS.TARGET_OPE_NO, 1, POSITION('.' IN PS.TARGET_OPE_NO)-1) AS LAYER,                              
                   SUBSTRING(PS.TARGET_OPE_NO, POSITION('.' IN PS.TARGET_OPE_NO)+1) AS STAGE                                                              
                   FROM APS_SYNC_SCHE_LOT_PURPTY_SETTING.APS_SYNC_SCHE_LOT_PURPTY_SETTING PS                                                                                                                                            
     )                                                                                                                                              
     SELECT '{uuid}' AS PARENTID,                                                                                                                  
            '%' AS TOOLG_ID,                                                                                                                        
            AD.LOT_ID,                                                                                                                              
            AD.LOT_PURPOSE AS PRI_TYPE,                                                                                                             
            MAX(WP.PROD_ID) AS PROD_ID,                                                                                                             
            '' AS TARGET_PLAN_ID,                                                                                                                   
            '' AS TARGET_STEP_ID,                                                                                                                   
            MAX(AD.LAYER) AS LAYER,                                                                                                                 
            MAX(AD.STAGE) AS STAGE,                                                                                                                 
            '{current_time}' AS UPDATE_TIME,                                                                                                             
            '' AS  PARTCODE                                                                                                 
     FROM ALL_DATA AD                                                                                                                               
     INNER JOIN WIP_DATA WP ON AD.LOT_ID = WP.LOT_ID                                                                                                
     GROUP BY AD.LOT_ID,AD.LOT_PURPOSE                                                                                                              
    """.format(uuid=uuid, current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_PRI_WIP",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_PRI_WIP")


def getLotToEqpDataSql(ETL_Proc_Name, oracle_conn, duck_db_memory, uuid, current_time):
    sql = """
    INSERT  /*+ append */  INTO APS_ETL_PRI_WIP(           
        PARENTID, TOOLG_ID, LOT_ID, PRI_TYPE, PROD_ID,TARGET_PLAN_ID,LAYER,STAGE,UPDATE_TIME,PARTCODE
    )                                                                
     SELECT DISTINCT '{uuid}' AS PARENTID,                          
           '%' AS TOOLG_ID,                                           
            E.LOT_ID,                                                 
            'LotEqpg' AS PRI_TYPE,                                    
            E.PRODSPEC_ID AS PROD_ID,                                 
            E.MAINPD_ID AS TARGET_PLAN_ID,                            
            SUBSTRING(E.OPE_NO, 1, POSITION('.' IN E.OPE_NO)-1) AS LAYER,   
            SUBSTRING(E.OPE_NO, POSITION('.' IN E.OPE_NO)+1) AS STAGE,      
            '{current_time}' AS UPDATE_TIME,                               
            '' AS  PARTCODE                   
     FROM APS_SYNC_SCHE_LOT_TO_EQPG.APS_SYNC_SCHE_LOT_TO_EQPG E                        
    """.format(uuid=uuid, current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_PRI_WIP",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_PRI_WIP")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_PRI_WIP_10M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_ETL_PRI_WIP"
    used_table_list = ['APS_SYNC_SHR_PRI',
                       'APS_SYNC_SHL_LOT_FIRE_NUMBER',
                       'APS_SYNC_CUT_LINE',
                       'APS_SYNC_SELECT_LOT',
                       'APS_SYNC_LOT_PURPOSE',
                       'APS_SYNC_SCHE_LOT_PURPTY_SETTING',
                       'APS_SYNC_SCHE_LOT_TO_EQPG',
                       'APS_ETL_WIP']
    target_table_sql = """
        create table {}APS_ETL_PRI_WIP
        (
          parentid       VARCHAR(60) not null,
          toolg_id       VARCHAR(64) not null,
          lot_id         VARCHAR(64) not null,
          pri_type       VARCHAR(64) not null,
          prod_id        VARCHAR(64),
          target_plan_id VARCHAR(64),
          target_step_id VARCHAR(64),
          layer          VARCHAR(64),
          stage          VARCHAR(64),
          update_time    VARCHAR(64) not null,
          partcode       VARCHAR(60) not null,
          PRIMARY KEY (PARTCODE, PARENTID, TOOLG_ID, LOT_ID, PRI_TYPE)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 4')
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        # 9/26修改逻辑 1. V_SELECT_LOT 如果是5为MFG SELECT，其他都是PC SELECT。
        # ACCELARATE_FLAG为N 也要在界面上显示出来，N的为不加速
        getSql(ETL_Proc_Name=ETL_Proc_Name, oracle_conn=oracle_conn, duck_db_memory=duck_db_memory, uuid=uuid, current_time=current_time)

        # 针对指定机群的Rework/Sub数据只关心（PRC=‘Y’ and Recipe机限）
        getLotToEqpDataSql(ETL_Proc_Name=ETL_Proc_Name, oracle_conn=oracle_conn, duck_db_memory=duck_db_memory, uuid=uuid,
               current_time=current_time)

        ################################################################################################################
        ## 写入log
        ################################################################################################################
        # 写版本号
        my_oracle.Monitor_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        if config.g_copy_to_pg and my_runner.judge_main_server(oracle_conn):
            select_sql_in_duck = """select CASE WHEN parentid='' THEN NULL ELSE parentid END AS parentid,
                                           CASE WHEN toolg_id='' THEN NULL ELSE toolg_id END AS toolg_id,
                                           CASE WHEN lot_id='' THEN NULL ELSE lot_id END AS lot_id,
                                           CASE WHEN pri_type='' THEN NULL ELSE pri_type END AS pri_type,
                                           CASE WHEN prod_id='' THEN NULL ELSE prod_id END AS prod_id,
                                           CASE WHEN target_plan_id='' THEN NULL ELSE target_plan_id END AS target_plan_id,
                                           CASE WHEN target_step_id='' THEN NULL ELSE target_step_id END AS target_step_id,
                                           CASE WHEN layer='' THEN NULL ELSE layer END AS layer,
                                           CASE WHEN stage='' THEN NULL ELSE stage END AS stage,
                                           CASE WHEN update_time ='' THEN NULL ELSE update_time  END AS update_time 
                                    from APS_ETL_PRI_WIP
                                                  """
            postgres_table_define = """etl_pri_wip(parentid,toolg_id,lot_id,pri_type,prod_id,target_plan_id,target_step_id,layer,stage,update_time)
                                               """
            my_postgres.copy_duckdb_to_postgres(uuid=uuid,
                                                duckdb=duck_db_memory,
                                                table_name_in_duckdb=target_table,
                                                table_name_in_pg="etl_pri_wip",  # 要小写
                                                select_sql_in_duck=select_sql_in_duck,
                                                postgres_table_define=postgres_table_define,
                                                oracle_conn=oracle_conn,
                                                ETL_Proc_Name=ETL_Proc_Name)
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                                   in_process_db_file=in_process_db_file,
                                                                                   target_table=target_table,
                                                                                   current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 加入PG执行结束的时间更新
        my_oracle.Update_PG_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_ETL_SGS_RLS_CODE_XX_ETL) # TODO 改成你自己的CODE
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        # 删除TMP目录:LQN:2023/08/21
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()