import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons


def create_temp_table(duck_db):
    table_type = ""
    if not config.g_debug_mode:
        table_type = 'TEMP'
    '''
       这里在内存中创建使用到的临时表
       '''
    sql = """
       create table APS_TMP_ETL_TOOL_MID_OCS_MEASURE_CT
       (
            job_spec_group_po_id VARCHAR(64),
            job_spec_group_id    VARCHAR(64),
            ope_start            VARCHAR(64),
            ope_complete         VARCHAR(64),
            measure_ct           VARCHAR(64)
       )
       """.format(table_type=table_type)
    duck_db.sql(sql)


def biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
       INSERT  /*+ append */  INTO {tempdb}APS_TMP_ETL_TOOL_MID_OCS_MEASURE_CT(                            
        JOB_SPEC_GROUP_PO_ID, JOB_SPEC_GROUP_ID, OPE_START, OPE_COMPLETE, MEASURE_CT                                                                     
       )                                                                                    
        WITH SPEC_JOB AS (                                                       
            SELECT JOB_SPEC_GROUP_ID,SEQNO                                       
            FROM APS_SYNC_OCS_JOB_GROUP_SPEC.APS_SYNC_OCS_JOB_GROUP_SPEC T                                          
            WHERE EXISTS (SELECT 1 FROM APS_SYNC_OCS_JOB_SPEC_GROUP_PO.APS_SYNC_OCS_JOB_SPEC_GROUP_PO P             
                  WHERE P.MAINTOOLFLAG = 'true'                     
                  AND T.JOB_SPEC_GROUP_ID = P.JOB_SPEC_GROUP_ID)                                                
            AND MAINTOOLFLAG = 'true'                              
        )                                                                        
        SELECT JOB_SPEC_GROUP_PO_ID, JOB_SPEC_GROUP_ID,                          
               MIN(END_TIME) AS OPE_START,                                       
             MAX(END_TIME)  AS OPE_COMPLETE,                                     
             ROUND((extract(epoch from(MAX(END_TIME) - MIN(END_TIME)))) / 3600.0,3) AS MEASURE_CT             
        FROM APS_MID_OCS_JOB_GROUP_PO_STATE_H_VIEW.APS_MID_OCS_JOB_GROUP_PO_STATE_H_VIEW H                                  
        WHERE 1=1                                                                
        AND H.STATUS IN ('OpeStart','OpeComplete')                               
        AND MODULE <> 'PHOTO'                                                    
        AND EXISTS(SELECT 1 FROM SPEC_JOB TT                                     
            WHERE TT.JOB_SPEC_GROUP_ID = H.JOB_SPEC_GROUP_ID                     
            AND CAST(H.SEQNO AS DECIMAL) > CAST(TT.SEQNO AS DECIMAL) )                                             
        GROUP BY JOB_SPEC_GROUP_PO_ID,JOB_SPEC_GROUP_ID                                                                                                                                                                                                         
    """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_TOOL_MID_OCS_MEASURE_CT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_TOOL_MID_OCS_MEASURE_CT")

    sql = """
       INSERT  /*+ append */  INTO APS_MID_OCS_MEASURE_CT(                            
         PARENTID,JOB_SPEC_GROUP_ID,MEASURE_CT, UPDATE_TIME, PARTCODE                                                                     
        )                                                                                  
        WITH MEDAIN_DATA AS (                                                                                              
             SELECT JOB_SPEC_GROUP_ID,                                                                                      
                  --  MEDIAN(CAST(MEASURE_CT AS DECIMAL)) OVER(PARTITION BY JOB_SPEC_GROUP_ID ) AS MEASURE_CT,
                    QUANTILE_CONT(CAST(MEASURE_CT AS DECIMAL),0.5) OVER(PARTITION BY JOB_SPEC_GROUP_ID) AS MEASURE_CT,                                                     
                    ROW_NUMBER() OVER (PARTITION BY JOB_SPEC_GROUP_ID ORDER BY MEASURE_CT DESC) AS RN                       
             FROM {tempdb}APS_TMP_ETL_TOOL_MID_OCS_MEASURE_CT                                                                              
         ),                                                                                                                 
         GROUP_DATA AS (                                                                                                    
             SELECT JOB_SPEC_GROUP_ID,                                                                                      
                    MAX(MEASURE_CT) AS MEASURE_CT,                                                                          
                    MAX(RN) AS RN                                                                                           
             FROM MEDAIN_DATA                                                                                               
             GROUP BY JOB_SPEC_GROUP_ID                                                                                     
         )                                                                                                            
        SELECT '{uuid}',                                                                                  
               JOB_SPEC_GROUP_ID,                                                                                         
               MEASURE_CT,                                                                                                
               '{current_time}',                                                                                  
               ''                                                               
        FROM GROUP_DATA                                                                                                   
        WHERE RN > 10                                                                                                                                                                                                                                                 
    """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_MID_OCS_MEASURE_CT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_MID_OCS_MEASURE_CT")

def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_TMP_TYPE11_MEDIAN_1D_APS_MID_OCS_MEASURE_CT"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_MID_OCS_MEASURE_CT"
    used_table_list = ['APS_SYNC_OCS_JOB_GROUP_SPEC',
                       'APS_SYNC_OCS_JOB_SPEC_GROUP_PO',
                       'APS_MID_OCS_JOB_GROUP_PO_STATE_H_VIEW']
    target_table_sql = """
    create table {}APS_MID_OCS_MEASURE_CT
    (
        parentid          VARCHAR(64),
        job_spec_group_id VARCHAR(64),
        measure_ct        VARCHAR(64),
        update_time       VARCHAR(64),
        partcode          VARCHAR(64)
    )
    """.format("")  # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)

        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 4')
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------

        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory, in_process_db_file=in_process_db_file, target_table=target_table, current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file,
                                   cons_error_code.APS_TR_TYPE_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        # 删除TMP目录:LQN:2023/08/21
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()