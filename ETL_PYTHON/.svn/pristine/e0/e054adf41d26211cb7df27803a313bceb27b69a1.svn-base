import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons


def create_temp_table(duck_db):
    table_type = ""
    if not config.g_debug_mode:
        table_type = 'TEMP'
    '''
      这里在内存中创建使用到的临时表
      '''
    sql = """
      create {table_type} table APS_TMP_ETL_TYPE12_SOURCE_DATA
      (
        cycle_time   VARCHAR(64),
        process_time VARCHAR(64),
        toolg_id     VARCHAR(64),
        pt_rn        VARCHAR(64)
      )
      """.format(table_type=table_type)
    duck_db.sql(sql)

    sql = """
        create {table_type} table APS_TMP_ETL_TYPE12_SKIP_DATA
        (
            cycle_time_beyond VARCHAR(64),
            toolg_id          VARCHAR(64)
        )
        """.format(table_type=table_type)
    duck_db.sql(sql)


def GteType12SuorceData(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
       INSERT INTO {tempdb}APS_TMP_ETL_TYPE12_SOURCE_DATA(                          
       CYCLE_TIME, PROCESS_TIME, TOOLG_ID, PT_RN                                                       
        )                                                                   
         SELECT 
             -- ROUND(CEIL((TO_DATE(T.TRACK_OUT,'YYYY-MM-DD HH24:MI:SS')                                             
            -- - TO_DATE(T.ARRIVAL,'YYYY-MM-DD HH24:MI:SS'))*24*60*60)/3600,2)    
             round((extract(epoch from(cast(T.TRACK_OUT as timestamp) - cast(T.ARRIVAL as timestamp)))) / 3600.0, 2)                              
            - CAST(T.BANK_TIME AS DECIMAL) AS CYCLE_TIME,                                                                         
            -- ROUND(CEIL((TO_DATE(T.TRACK_OUT,'YYYY-MM-DD HH24:MI:SS')                                                
            --  - TO_DATE(T.TRACK_IN,'YYYY-MM-DD HH24:MI:SS'))*24*60*60)/3600,2) AS PROCESS_TIME,  
                 round((extract(epoch from(cast(T.TRACK_OUT as timestamp) - cast(T.TRACK_IN as timestamp)))) / 3600.0, 2) AS PROCESS_TIME,                
             T.TOOLG_ID,                                                                                             
             ROW_NUMBER() OVER (PARTITION BY T.TOOLG_ID ORDER BY T.TRACK_OUT DESC) AS PT_RN                          
         FROM APS_TR_TYPE12.APS_TR_TYPE12 T    
    """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_TYPE12_SOURCE_DATA",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_TYPE12_SOURCE_DATA")


def GteType12SkipData(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
        sql = """
           INSERT INTO {tempdb}APS_TMP_ETL_TYPE12_SKIP_DATA(                         
         CYCLE_TIME_BEYOND, TOOLG_ID                                                
         )                                                                  
            SELECT CAST(AVG(cast(CYCLE_TIME as decimal)) as decimal) + cast(3*STDDEV_POP(cast(CYCLE_TIME as decimal)) as decimal) AS CYCLE_TIME_BEYOND,                                     
                   TOOLG_ID                                                                                             
            FROM {tempdb}APS_TMP_ETL_TYPE12_SOURCE_DATA                                                                       
            GROUP BY TOOLG_ID          
        """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())
        my_duck.exec_sql(oracle_conn=oracle_conn,
                         duck_db_memory=duck_db_memory,
                         ETL_Proc_Name=ETL_Proc_Name,
                         methodName="Insert Into APS_TMP_ETL_TYPE12_SKIP_DATA",
                         sql=sql,
                         current_time=current_time,
                         update_table="APS_TMP_ETL_TYPE12_SKIP_DATA")


# ①加入防呆，必须TYPE11满10笔才算中位数
# ②加入CT异常值过滤：大于 机群CT平均值+3*（机群CT标准差）
def GetType11MedianSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
         INSERT  /*+ append */  INTO APS_TMP_TYPE11_TECH_MEDIAN(                             
        PARENTID, CYCLE_TIME, PROCESS_TIME, PROD_TECH, OPE_NO, TOOLG_ID, UPDATE_TIME, PARTCODE                                                                  
        )                                                                                   
         WITH TYPE11 AS (                                                                                            
              SELECT 
                  --ROUND(CEIL((TO_DATE(T.TRACK_OUT,'YYYY-MM-DD HH24:MI:SS')                                                                                  
                  -- - TO_DATE(T.ARRIVAL,'YYYY-MM-DD HH24:MI:SS'))*24*60*60)/3600,2)                                    
                  -- - T.BANK_TIME AS CYCLE_TIME, 

                  round((extract(epoch from(CAST(T.TRACK_OUT AS TIMESTAMP) - (CAST(T.ARRIVAL AS TIMESTAMP))))) / 3600.0, 2) 
                   - CAST(T.BANK_TIME AS DECIMAL) AS CYCLE_TIME,                                                              
                  --ROUND(CEIL((TO_DATE(T.TRACK_OUT,'YYYY-MM-DD HH24:MI:SS')                                           
                  -- - TO_DATE(T.TRACK_IN,'YYYY-MM-DD HH24:MI:SS'))*24*60*60)/3600,2) AS PROCESS_TIME, 

                  ROUND((extract(epoch from(CAST(T.TRACK_OUT AS TIMESTAMP) 
                  - CAST(T.TRACK_IN AS TIMESTAMP)))) / 3600.0, 2) AS PROCESS_TIME,                   
                  T.PROD_TECH, T.OPE_NO, T.TOOLG_ID,                                                                   
                  ROW_NUMBER() OVER (PARTITION BY T.PROD_TECH,T.OPE_NO, T.TOOLG_ID ORDER BY T.TRACK_OUT DESC) AS PT_RN    
              FROM APS_TR_TYPE11.APS_TR_TYPE11 T                                                                                   
         ),                                                                                                          
        CT_TYPE11_DATA AS (                                                                                                   
             SELECT T.CYCLE_TIME,                                                                                              
                    T.PROD_TECH, T.OPE_NO, T.TOOLG_ID,                                                                           
                    ROW_NUMBER() OVER (PARTITION BY T.PROD_TECH,T.OPE_NO, T.TOOLG_ID ORDER BY T.CYCLE_TIME DESC) AS CT_RN        
             FROM TYPE11 T                                                                                                     
             INNER JOIN {tempdb}APS_TMP_ETL_TYPE12_SKIP_DATA D                                                                          
             ON D.TOOLG_ID = T.TOOLG_ID                                                                                        
             AND T.CYCLE_TIME < CYCLE_TIME_BEYOND                                                                              
             AND T.CYCLE_TIME > 0                                                                                              
        ),                                                                                                                         
        PT_MEDAIN_DATA AS (                                                                                                                         
             SELECT --MEDIAN(CAST(PROCESS_TIME AS DECIMAL)) OVER(PARTITION BY PROD_TECH,OPE_NO,TOOLG_ID ) AS PROCESS_TIME,
                    QUANTILE_CONT(CAST(PROCESS_TIME AS DECIMAL),0.5) OVER(PARTITION BY PROD_TECH,OPE_NO,TOOLG_ID ) AS PROCESS_TIME,                                                                                                                                   
                      PROD_TECH,OPE_NO, TOOLG_ID, PT_RN   FROM TYPE11                                                                                                                                                                               
        ),        
       CT_MEDAIN_DATA AS (                                                                                                   
             SELECT --MEDIAN(CAST(CYCLE_TIME AS DECIMAL)) OVER(PARTITION BY PROD_TECH,OPE_NO,TOOLG_ID ) AS CYCLE_TIME,  
                    QUANTILE_CONT(CAST(CYCLE_TIME AS DECIMAL),0.5) OVER(PARTITION BY PROD_TECH,OPE_NO,TOOLG_ID ) AS CYCLE_TIME,                                                                                                                                  
                    PROD_TECH,OPE_NO, TOOLG_ID, CT_RN  FROM CT_TYPE11_DATA                                                                                            
         ),                                                                             
         PT_RESULT_DATA AS (                                                                                                   
            SELECT MAX(PROCESS_TIME) AS PROCESS_TIME,                                                                                                                                  
                   PROD_TECH,OPE_NO, TOOLG_ID,                                                                                   
                   MAX(PT_RN) AS RN                                                                                            
            FROM PT_MEDAIN_DATA                                                                                                
            GROUP BY PROD_TECH,OPE_NO, TOOLG_ID                                                                                  
         ),                                                                                                                    
         CT_RESULT_DATA AS (                                                                                                   
            SELECT MAX(CYCLE_TIME) AS CYCLE_TIME,                                                                                                                                    
                   PROD_TECH,OPE_NO, TOOLG_ID,                                                                                   
                   MAX(CT_RN) AS RN                                                                                            
            FROM CT_MEDAIN_DATA                                                                                                
            GROUP BY PROD_TECH,OPE_NO, TOOLG_ID                                                                                  
         ),                                                                                                                    
         UNION_DATA AS (                                                                                                       
            SELECT 0 AS CYCLE_TIME,PROCESS_TIME,                                                                               
                   PROD_TECH,OPE_NO, TOOLG_ID                                                                                                                                         
            FROM PT_RESULT_DATA                                                                                                
            WHERE RN > 10                                                                                                      
            UNION ALL                                                                                                          
            SELECT CYCLE_TIME,0 AS PROCESS_TIME,                                                                               
                   PROD_TECH,OPE_NO, TOOLG_ID                                                                                                                                         
            FROM CT_RESULT_DATA                                                                                                
            WHERE RN > 10                                                                                                      
         )                                                                                                                     
         SELECT '{uuid}',                                                                                       
                MAX(CYCLE_TIME) AS CYCLE_TIME,                                                                                 
                MAX(PROCESS_TIME) AS PROCESS_TIME,                                                                             
                PROD_TECH,OPE_NO, TOOLG_ID,                                                                                      
                 '{current_time}',                                                                                
                ''                                                                            
         FROM UNION_DATA                                                                                                       
         GROUP BY PROD_TECH,OPE_NO, TOOLG_ID                      
    """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())
    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_TYPE11_TECH_MEDIAN",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_TYPE11_TECH_MEDIAN")


def execute():
    # 计算Global type21的线性回归

    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_TMP_TYPE11_MEDIAN_1D_APS_TMP_TYPE11_TECH_MEDIAN"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_TMP_TYPE11_TECH_MEDIAN"
    used_table_list = ['APS_TR_TYPE11', 'APS_TR_TYPE12']
    target_table_sql = """      
    create table {}APS_TMP_TYPE11_TECH_MEDIAN
    (
        parentid     VARCHAR(64) not null,
        cycle_time   VARCHAR(64),
        process_time VARCHAR(64),
        prod_tech      VARCHAR(64),
        ope_no       VARCHAR(64),
        toolg_id     VARCHAR(64),
        update_time  VARCHAR(64) not null,
        partcode     VARCHAR(64) not null
    )
    """.format("")  # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 5')
        if not os.path.exists(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)):
            os.makedirs(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid))
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------

        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        # 将Type12的数据拆分开来执行
        GteType12SuorceData(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        GteType12SkipData(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        GetType11MedianSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory, in_process_db_file=in_process_db_file, target_table=target_table, current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, "XETL054")
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        # 删除TMP目录:LQN:2023/08/21
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()