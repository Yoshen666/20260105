import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons


def create_temp_table(duck_db):
    '''
    这里在内存中创建使用到的临时表
    '''
    sql = """
    create table APS_TMP_PD_RECIPE_EQP_MAIN
    (
      parentid           VARCHAR(32),
      eqp_id             VARCHAR(10),
      lcrecipe_id        VARCHAR(40),
      pd_id              VARCHAR(40),
      physical_recipe_id VARCHAR(80),
      prodspec_id        VARCHAR(30),
      m_recipe           VARCHAR(100),
      update_time        VARCHAR(40),
      sync_time          TIMESTAMP,
      recipe_id_c        VARCHAR(64),
      partcode           VARCHAR(64)
    )
    """
    duck_db.sql(sql)

def biz_method_02(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
    INSERT INTO APS_SYNC_PD_RECIPE_EQP_ALL (                              
     PARENTID, EQP_ID, LCRECIPE_ID, PD_ID, PHYSICAL_RECIPE_ID, PRODSPEC_ID, M_RECIPE, UPDATE_TIME, SYNC_TIME, RECIPE_ID_C, PARTCODE                                                      
    )                                                                           
     SELECT '{uuid}'  AS PARENTID,                                                                          
        A.EQP_ID,                                                           
        A.LCRECIPE_ID,                                                      
        A.PD_ID,                                                            
        A.PHYSICAL_RECIPE_ID,                                               
        A.PRODSPEC_ID AS PRODSPEC_ID,                                       
        A.M_RECIPE AS M_RECIPE,                                             
        --TO_DATE(A.UPDATE_TIME,'YYYY-MM-DD HH24:MI:SS') AS UPDATE_TIME,
        A.UPDATE_TIME,      
        '{current_time}' AS SYNC_TIME,                                                        
        A.RECIPE_ID_C,                                                      
        '' AS PARTCODE                         
     FROM APS_TMP_PD_RECIPE_EQP_MAIN  A                                     
    """.format(uuid=uuid, current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_SYNC_PD_RECIPE_EQP_ALL",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_SYNC_PD_RECIPE_EQP_ALL")


def biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
     INSERT /*+ APPEND */                                           
     INTO  APS_TMP_PD_RECIPE_EQP_MAIN                                
      (PARENTID,                                                    
       EQP_ID,                                                      
       LCRECIPE_ID,                                                 
       PD_ID,                                                       
       PHYSICAL_RECIPE_ID,                                          
       PRODSPEC_ID,                                                 
       M_RECIPE,                                                    
       UPDATE_TIME,                                                 
       -- SYNC_TIME,                                                   
       RECIPE_ID_C,                                                  
       PARTCODE)                                                    
      SELECT '' AS PARENTID,                                        
             A.EQP_ID AS EQP_ID,                                    
             A.LCRECIPE_ID AS LCRECIPE_ID,                          
             A.PD_ID AS PD_ID,                                      
             A.PHYSICAL_RECIPE_ID AS PHYSICAL_RECIPE_ID,            
             A.PRODSPEC_ID AS PRODSPEC_ID,                          
             A.M_RECIPE AS M_RECIPE,                                
             '{current_time}' AS UPDATE_TIME,                         
             -- A.SYNC_TIME AS SYNC_TIME,                    
             REPLACE(SUBSTR(A.PHYSICAL_RECIPE_ID,                   
                          POSITION(';' in A.PHYSICAL_RECIPE_ID) + 1,     
                          LENGTH(A.PHYSICAL_RECIPE_ID) -            
                          POSITION(';' in A.PHYSICAL_RECIPE_ID)),        
                   '/',                                             
                   '') AS RECIPE_ID_C,                              
             ''                                AS PARTCODE          
        FROM  APS_SYNC_PD_RECIPE_EQP_MAIN.APS_SYNC_PD_RECIPE_EQP_MAIN AS A                         
        INNER JOIN  APS_SYNC_ETL_TOOL.APS_SYNC_ETL_TOOL AS T    
        ON T.EQP_ID = A.EQP_ID  
        AND T.HOST_EQP_FLAG = 'Y'                                            
       WHERE EXISTS (SELECT 1                                       
                     FROM APS_SYNC_WIP.APS_SYNC_WIP AS B                                 
                     WHERE A.PRODSPEC_ID = B.PRODSPEC_ID                  
                    )
    """.format(current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_PD_RECIPE_EQP_MAIN",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_PD_RECIPE_EQP_MAIN")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_RECIPE_EQP_ALL_10M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_SYNC_PD_RECIPE_EQP_ALL"
    used_table_list = ['APS_SYNC_PD_RECIPE_EQP_MAIN',
                       'APS_SYNC_ETL_TOOL',
                       'APS_SYNC_WIP']
    target_table_sql = """
        create table {}APS_SYNC_PD_RECIPE_EQP_ALL
        (
          parentid           VARCHAR(32) not null,
          eqp_id             VARCHAR(10),
          lcrecipe_id        VARCHAR(40),
          pd_id              VARCHAR(40) not null,
          physical_recipe_id VARCHAR(80),
          prodspec_id        VARCHAR(30) not null,
          m_recipe           VARCHAR(100),
          update_time        TIMESTAMP,
          sync_time          TIMESTAMP,
          recipe_id_c        VARCHAR(64),
          partcode           VARCHAR(64)
        )
    """.format("") # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute("SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        row_count = my_duck.get_row_count_in_duckdb(duck_db=duck_db_memory, tableName="APS_TMP_PD_RECIPE_EQP_MAIN")
        if row_count == 0:
            my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time, "APS_TMP_PD_RECIPE_EQP_MAIN没有数据，请及时确认一下！！")
            return

        biz_method_02(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_ETL_QTIME_HOLD_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()