import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons, my_postgres, my_runner


def create_temp_table(duck_db):
    table_type = ""
    if not config.g_debug_mode:
        table_type = 'TEMP'
    '''
    这里在内存中创建使用到的临时表
    '''
    sql = """
    create {table_type} table APS_TMP_ETL_SAMPLING_LOT_FORCESAMP
    (
        lot_id  VARCHAR(60),
        prod_id VARCHAR(60),
        plan_no VARCHAR(60),
        plan_id VARCHAR(60),
        layer   VARCHAR(60),
        stage   VARCHAR(60)
        --STEP_ID VARCHAR(60)
    )
    """.format(table_type=table_type)
    duck_db.sql(sql)

def GetSamplingLotWithFlowSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
         INSERT  /*+ append */  INTO APS_ETL_SAMPLING_LOT(   
                     PARENTID, LOT_ID, PROD_ID, PLAN_NO, PLAN_ID, STEP_ID, 
                     LAYER, STAGE, UPDATE_TIME, PARTCODE                                           
        )                                                         
         WITH LAST_FLOW AS (                                      
           SELECT PROD_ID,                                        
                  PLAN_ID,                                        
                  OPE_NO,                                         
                  STEP_ID                                         
           FROM APS_ETL_FLOW.APS_ETL_FLOW                                             
         )                                                        
         SELECT DISTINCT '{uuid}' AS PARENTID,         
                P.LOT_ID,                                         
                P.PROD_ID,                                        
                P.PLAN_NO,                                        
                P.PLAN_ID,                                        
                F.STEP_ID,                                        
                P.LAYER,                                          
                P.STAGE,                                          
         CAST('{current_time}' AS TIMESTAMP) AS UPDATE_TIME,                   
         '' AS PARTCODE          
         FROM {tempdb}APS_TMP_ETL_SAMPLING_LOT_FORCESAMP P        
         INNER JOIN LAST_FLOW F                                   
         ON F.OPE_NO = (P.LAYER ||'.'||P.STAGE)                   
         AND F.PLAN_ID = P.PLAN_ID AND F.PROD_ID = P.PROD_ID                                         
    """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_SAMPLING_LOT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_SAMPLING_LOT")


def GetSamplingLotSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
      INSERT INTO {tempdb}APS_TMP_ETL_SAMPLING_LOT_FORCESAMP(     
         LOT_ID, PROD_ID, PLAN_NO, PLAN_ID, LAYER, STAGE                                                   
       )                                                                   
        SELECT W.LOT_ID,                                                  
               W.PRODSPEC_ID AS PROD_ID,                                  
               '1' AS PLAN_NO,                                            
               P.MAINPD_ID AS PLAN_ID,                                    
               SUBSTRING(P.OPE_NO, 1, POSITION('.' IN P.OPE_NO)-1) AS LAYER,    
               SUBSTRING(P.OPE_NO, POSITION('.' IN P.OPE_NO)+1) AS STAGE        
        FROM APS_SYNC_CSLOT_FORCESAMP.APS_SYNC_CSLOT_FORCESAMP P             
        INNER JOIN APS_SYNC_WIP.APS_SYNC_WIP W                                            
        ON W.LOT_ID = P.LOT_ID                             
        WHERE P.SAMP_TYPE = 'SKIP'           
    """.format(current_time=current_time, tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_SAMPLING_LOT_FORCESAMP",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_SAMPLING_LOT_FORCESAMP")

def GetSkipAnnotationLotSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
        sql = """
          INSERT INTO APS_ETL_SAMPLING_LOT(     
             PARENTID, LOT_ID, PROD_ID, PLAN_NO, PLAN_ID, STEP_ID,
             LAYER, STAGE, UPDATE_TIME, PARTCODE                                                  
          )                                                                                     
           SELECT DISTINCT '{uuid}' AS PARENTID,                 
                B.LOT_ID,                                                   
                F.PROD_ID,                                                  
                '1' AS PLAN_NO,                                             
                B.MAINPD_ID,                                                
                F.STEP_ID,                                                  
                SUBSTRING(B.OPE_NO, 1, POSITION('.' IN B.OPE_NO)-1) AS LAYER,     
                SUBSTRING(B.OPE_NO, POSITION('.' IN B.OPE_NO)+1) AS STAGE,        
                '{current_time}' AS UPDATE_TIME,                      
                '' AS PARTCODE           
         FROM APS_SYNC_LOT_ANNOTATION_INFO_BRANCH.APS_SYNC_LOT_ANNOTATION_INFO_BRANCH B   
         INNER JOIN APS_SYNC_WIP.APS_SYNC_WIP W                
         ON W.LOT_ID = B.LOT_ID AND W.MAINPD_ID = B.MAINPD_ID               
         -- AND W.PARTCODE = '"+partCodeList.get(0)+"'                         
         INNER JOIN APS_ETL_FLOW.APS_ETL_FLOW F                 
         ON F.PROD_ID = W.PRODSPEC_ID                                       
         AND F.PLAN_ID = B.MAINPD_ID                                        
         AND F.OPE_NO = B.OPE_NO                                            
         --AND F.PARTCODE = '"+partCodeList.get(2)+"'                         
         WHERE B.ANNOTATION_FLAG = 'N'                                      
         --AND B.PARTCODE = '"+partCodeList.get(3)+"'                         
         AND NOT EXISTS (                                            		
              SELECT 1 FROM APS_ETL_SAMPLING_LOT L                   		
              WHERE L.LOT_ID = B.LOT_ID                              		
              AND F.PROD_ID = L.PROD_ID                              		
              AND B.MAINPD_ID = L.PLAN_ID                            		
              AND B.OPE_NO = L.LAYER || '.' || L.STAGE               		
              --AND L.PARTCODE = '"+ partition_Value_New +"'           		
              AND F.STEP_ID = L.STEP_ID                              		
         )                                                           		        
        """.format(uuid=uuid, current_time=current_time, tempdb=my_duck.get_temp_table_mark())

        my_duck.exec_sql(oracle_conn=oracle_conn,
                         duck_db_memory=duck_db_memory,
                         ETL_Proc_Name=ETL_Proc_Name,
                         methodName="Insert Into APS_TMP_ETL_SAMPLING_LOT_FORCESAMP",
                         sql=sql,
                         current_time=current_time,
                         update_table="APS_TMP_ETL_SAMPLING_LOT_FORCESAMP")

def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_SAMPLING_LOT_5M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_ETL_SAMPLING_LOT"
    used_table_list = ['APS_SYNC_CSLOT_FORCESAMP',
                       'APS_SYNC_WIP',
                       'APS_ETL_FLOW',
                       'APS_SYNC_LOT_ANNOTATION_INFO_BRANCH']
    target_table_sql = """
        create  table {}APS_ETL_SAMPLING_LOT
        (
            parentid    VARCHAR(60) not null,
            lot_id      VARCHAR(60) not null,
            prod_id     VARCHAR(60) not null,
            plan_no     VARCHAR(60) not null,
            plan_id     VARCHAR(60) not null,
            step_id     VARCHAR(60) not null,
            layer       VARCHAR(60) not null,
            stage       VARCHAR(60) not null,
            update_time TIMESTAMP not null,
            partcode    VARCHAR(60) not null,
            PRIMARY KEY (PARENTID, LOT_ID, PROD_ID, PLAN_NO, PLAN_ID, STEP_ID, LAYER, STAGE, PARTCODE)
        )
    """.format("") # 注意:这里一定要这么写 [create {table_type} table 表名] => [create {table_type} table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 4')
        if not os.path.exists(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)):
            os.makedirs(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid))
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        # 获取SAMPLINGLOTSql信息
        GetSamplingLotSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取SAMPLINGLOTSql信息关联FLow
        GetSamplingLotWithFlowSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取注记站点不会量测的数据
        GetSkipAnnotationLotSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 写入log
        ################################################################################################################
        # 写版本号
        my_oracle.Monitor_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        if config.g_copy_to_pg and my_runner.judge_main_server(oracle_conn):
            select_sql_in_duck = """select CASE WHEN parentid='' THEN NULL ELSE parentid END AS parentid,
                                           CASE WHEN lot_id='' THEN NULL ELSE lot_id END AS lot_id,
                                           CASE WHEN prod_id='' THEN NULL ELSE prod_id END AS prod_id,
                                           CASE WHEN plan_no='' THEN NULL ELSE plan_no END AS plan_no,
                                           CASE WHEN plan_id='' THEN NULL ELSE plan_id END AS plan_id,
                                           CASE WHEN step_id='' THEN NULL ELSE step_id END AS step_id,
                                           CASE WHEN layer='' THEN NULL ELSE layer END AS layer,
                                           CASE WHEN stage='' THEN NULL ELSE stage END AS stage,
                                           update_time 
                                    from APS_ETL_SAMPLING_LOT
                                 """
            postgres_table_define = """etl_sampling_lot(parentid,lot_id,prod_id,plan_no,plan_id,step_id,layer,stage,update_time)
                                    """
            my_postgres.copy_duckdb_to_postgres(uuid=uuid,
                                                duckdb=duck_db_memory,
                                                table_name_in_duckdb=target_table,
                                                table_name_in_pg="etl_sampling_lot",  # 要小写
                                                select_sql_in_duck=select_sql_in_duck,
                                                postgres_table_define=postgres_table_define,
                                                oracle_conn=oracle_conn,
                                                ETL_Proc_Name=ETL_Proc_Name)

        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                                   in_process_db_file=in_process_db_file,
                                                                                   target_table=target_table,
                                                                                   current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 加入PG执行结束的时间更新
        my_oracle.Update_PG_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file, cons_error_code.APS_ETL_SAPMLING_LOT_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        # 删除TMP目录:LQN:2023/08/21
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()