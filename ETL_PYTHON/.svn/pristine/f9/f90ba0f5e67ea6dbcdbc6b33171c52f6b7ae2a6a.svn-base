import gc
import logging
import os

from xinxiang import config
from xinxiang.util import my_duck, my_oracle, my_date, cons_error_code, cons


def create_temp_table(duck_db):
    pass


def biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
        INSERT  /*+ append */  INTO APS_TR_PH_CAPATITY_ISSUE_TEST(                            
          PROD_ID,MAINPD_ID,CONTINUS_ENTRY_OPE_NO,OPER_NO,LOT_ID,
          GUID, PARTKEY                                                             
         )                                                                                  
        WITH SOURCE_DATA AS (                                                            
             SELECT E.PROD_ID,E.MAINPD_ID,E.NEXT_OPE_NO,                                  
                    MIN(HOLD_FLAG) AS HOLD_FLAG                                           
             FROM APS_SYNC_RTD_QTIME_PROD_EQP.APS_SYNC_RTD_QTIME_PROD_EQP E                                                  
             WHERE 
             --INSTR(E.NEXT_OPE_NO,'.F') = 0   
             POSITION('.F' IN E.NEXT_OPE_NO) = 0                                       
             AND NOT EXISTS (                                                             
                 SELECT 1 FROM APS_SYNC_PRODUCT.APS_SYNC_PRODUCT T                                                
                 WHERE T.GROUP_TECH IN ('L55','L28','L40')                                
                 AND E.PROD_ID = T.prodspec_id                                            
             )                                                                            
             GROUP BY E.PROD_ID,E.MAINPD_ID,E.NEXT_OPE_NO                                 
         ),                                                                               
         QTIME_FLOW_DATA AS (                                                             
             SELECT DISTINCT D.PROD_ID, D.MAINPD_ID,                                      
                    F.CONTINUS_ENTRY_OPE_NO,                                              
                    F.OPER_SEQ,F.OPER_NO,D.NEXT_OPE_NO                                    
             FROM SOURCE_DATA D                                                           
             INNER JOIN APS_SYNC_RTD_QTIME_FLOW.APS_SYNC_RTD_QTIME_FLOW F                                                
             ON F.PRODSPEC_ID = D.PROD_ID                                                 
             AND F.FLOW_KEY = D.MAINPD_ID                                                 
             AND D.NEXT_OPE_NO = F.OPER_NO                                                
             WHERE D.HOLD_FLAG = '1'                                                      
         ),                                                                               
         RESULT_DATA AS (                                                                 
             SELECT DISTINCT D.PROD_ID, D.MAINPD_ID,                                      
                    D.CONTINUS_ENTRY_OPE_NO,                                              
                    D.OPER_NO,'' AS EQP_ID                                                
             FROM QTIME_FLOW_DATA D                                                       
             INNER JOIN APS_SYNC_RTD_QTIME_FLOW.APS_SYNC_RTD_QTIME_FLOW F                                                
             ON D.PROD_ID = F.PRODSPEC_ID                                                 
             AND D.MAINPD_ID = F.FLOW_KEY                                                 
             AND D.CONTINUS_ENTRY_OPE_NO = F.CONTINUS_ENTRY_OPE_NO                        
             AND D.OPER_SEQ >= F.OPER_SEQ                                                 
             UNION ALL                                                                    
             SELECT DISTINCT E.PROD_ID, E.MAINPD_ID,                                      
                    '' AS CONTINUS_ENTRY_OPE_NO,                                          
                    E.NEXT_OPE_NO,E.EQP_ID                                                
             FROM APS_SYNC_RTD_QTIME_PROD_EQP.APS_SYNC_RTD_QTIME_PROD_EQP E                                                  
             WHERE E.HOLD_FLAG = '1'                                                      
             --AND INSTR(E.NEXT_OPE_NO,'.PP') > 0   
             AND POSITION('.PP' IN E.NEXT_OPE_NO) > 0                                          
             AND NOT EXISTS (                                                             
             SELECT 1                                                                     
             FROM QTIME_FLOW_DATA D                                                       
             WHERE D.PROD_ID = E.PROD_ID                                                  
             AND D.MAINPD_ID = E.MAINPD_ID                                                
             AND D.NEXT_OPE_NO = E.NEXT_OPE_NO                                            
             )                                                                            
         )                                                                                
         SELECT DISTINCT D.PROD_ID,D.MAINPD_ID,                                           
                D.CONTINUS_ENTRY_OPE_NO,                                                  
                D.OPER_NO,                                                                
                W.LOT_ID,                                                                 
              '{uuid}'  AS GUID,                                                       
              '{current_time}' AS PARTKEY                
         FROM RESULT_DATA D                                                               
         INNER JOIN APS_ETL_WIP.APS_ETL_WIP W ON                                    
          W.TARGET_PLAN_ID = D.MAINPD_ID                                               
         AND W.PROD_ID = D.PROD_ID                                                        
         AND W.TARGET_OPE_NO = D.OPER_NO                                                  
         AND W.LOT_STATUS <> 'RUN'                                                        
         AND W.LOT_STATUS <> 'JOBPREPARED'                                                
         --AND W.LOT_STATUS = 'WAIT'                                                      
         WHERE 1=1                                                                        
         --AND INSTR(D.OPER_NO,'.PP') > 0   
         AND POSITION('.PP' IN D.OPER_NO) > 0                                                                                                                                                             
    """.format(uuid=uuid, current_time=current_time)

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TR_PH_CAPATITY_ISSUE_TEST",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TR_PH_CAPATITY_ISSUE_TEST")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_TR_APC_PA_10M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_TR_PH_CAPATITY_ISSUE_TEST"
    used_table_list = ['APS_SYNC_RTD_QTIME_PROD_EQP', 'APS_SYNC_PRODUCT', 'APS_SYNC_RTD_QTIME_FLOW', 'APS_ETL_WIP']
    target_table_sql = """
    create table {}APS_TR_PH_CAPATITY_ISSUE_TEST
    (
        prod_id               VARCHAR(64),
        mainpd_id             VARCHAR(64),
        continus_entry_ope_no VARCHAR(64),
        oper_no               VARCHAR(64),
        lot_id                VARCHAR(64),
        guid                  VARCHAR(60) not null,
        partkey               VARCHAR(60) not null
    )
    """.format("")  # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_momory(target_table_sql)
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            duck_db_memory.sql('SET threads TO 2')
            # 加上TMP目录:LQN:2023/08/21
            duck_db_memory.execute(
                "SET temp_directory='{}'".format(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)))
        # 创建Temp表
        create_temp_table(duck_db_memory)
        # Attach用到的表
        my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        biz_method_01(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        # 导出到目标文件中
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
                                                                                  target_table,
                                                                                  target_table_sql.format("file_db."),
                                                                                  current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        # my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file,
        #                         cons_error_code.APS_TR_TYPE_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if config.g_thread_and_memory_limit:  # 是否手动管理内存和进程
            # 删除TMP目录:LQN:2023/08/21
            if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
                os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        gc.collect()  # 内存释放


if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()