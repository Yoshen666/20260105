def create_temp_table(duck_db):
    table_type = ""
    if not config.g_debug_mode:
        table_type = 'TEMP'
    '''
    这里在内存中创建使用到的临时表
    '''

    sql = """
    create {table_type} table APS_TMP_ETL_QTIME_SPEC_PROD
    (
        parentid     VARCHAR(60) not null,
        prod_id      VARCHAR(60) not null,
        plan_id      VARCHAR(60) not null,
        step_id_from VARCHAR(60) not null,
        step_id_to   VARCHAR(60) not null,
        ope_no_from  VARCHAR(60),
        ope_no_to    VARCHAR(60),
        update_time  VARCHAR(60) not null,
        timelimit    VARCHAR(60) not null,
        partcode     VARCHAR(60) not null
    )
    """.format(table_type=table_type)
    duck_db.sql(sql)

    sql = """
        create {table_type} table APS_TMP_ETL_QTIME_SPEC_VIRT
        (
            parentid     VARCHAR(60) not null,
            prod_id      VARCHAR(60) not null,
            plan_id      VARCHAR(60) not null,
            step_id_from VARCHAR(60) not null,
            step_id_to   VARCHAR(60) not null,
            ope_no_from  VARCHAR(60),
            ope_no_to    VARCHAR(60),
            update_time  VARCHAR(60) not null,
            timelimit    VARCHAR(60) not null,
            partcode     VARCHAR(60) not null
        )
        """.format(table_type=table_type)
    duck_db.sql(sql)

    sql = """
            create {table_type} table APS_TMP_ETL_QTIME_SPEC_GRADE
            (
                custom_field     VARCHAR(512),
                PRODSPEC_ID VARCHAR(64),
                FLOW_KEY VARCHAR(64),
                FROM_OPE_NO VARCHAR(64),
                TO_OPE_NO VARCHAR(64)
            )
            """.format(table_type=table_type)
    duck_db.sql(sql)


def getQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
       INSERT  /*+ append */  INTO {tempdb}APS_TMP_ETL_QTIME_SPEC_PROD (
        PARENTID, PROD_ID, PLAN_ID, STEP_ID_FROM, STEP_ID_TO, 
        OPE_NO_FROM, OPE_NO_TO, TIMELIMIT, PARTCODE, UPDATE_TIME)  
          WITH QTIME_FLOW_DATA AS (                                                          
                SELECT C.PRODSPEC_ID AS PROD_ID ,                                            
                       C.FLOW_KEY    AS PLAN_ID ,                                            
                       FD1.STEP_ID AS STEP_ID_FROM ,                                             
                       FD2.STEP_ID AS STEP_ID_TO,                                                
                       C.FROM_OPE_NO AS OPE_NO_FROM ,                                           
                       C.TO_OPE_NO AS OPE_NO_TO ,                                               
                       C.QTIME_LIMIT AS TIMELIMIT                                            
                FROM APS_SYNC_QTIME_CONSTRAINT.APS_SYNC_QTIME_CONSTRAINT C                       
                INNER JOIN APS_ETL_FLOW.APS_ETL_FLOW FD1 ON FD1.PROD_ID = C.PRODSPEC_ID            
                      AND FD1.PLAN_ID = C.FLOW_KEY AND FD1.OPE_NO = C.FROM_OPE_NO               
                      --AND FD1.PARTCODE = '"+partCodeList.get(2)+"'                                 
                INNER JOIN APS_ETL_FLOW.APS_ETL_FLOW FD2 ON FD2.PROD_ID = C.PRODSPEC_ID            
                      AND FD2.PLAN_ID = C.FLOW_KEY AND FD2.OPE_NO = C.TO_OPE_NO              
                    --  AND FD2.PARTCODE = '"+partCodeList.get(2)+"'                                
               -- WHERE C.PARTCODE = '"+partCodeList.get(0)+"'                                 
          )                                                                                  
         SELECT '{uuid}'  AS PARENTID,                                                   
                PROD_ID,PLAN_ID,                                                             
                STEP_ID_FROM,STEP_ID_TO,                                                     
                OPE_NO_FROM,OPE_NO_TO,                                                       
                MIN(TIMELIMIT) AS TIMELIMIT,                                                 
                '' AS PARTCODE,                                                                 
               '{current_time}' AS UPDATE_TIME                                                  
         FROM QTIME_FLOW_DATA                                                                                   
         GROUP BY PROD_ID, PLAN_ID, STEP_ID_FROM,STEP_ID_TO, OPE_NO_FROM,OPE_NO_TO                                                                                                                
        """.format(uuid=uuid, current_time=current_time,tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_QTIME_SPEC_PROD",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_QTIME_SPEC_PROD")


def getVirtQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
         INSERT  /*+ append */  INTO {tempdb}APS_TMP_ETL_QTIME_SPEC_VIRT (PARENTID, PROD_ID, PLAN_ID, STEP_ID_FROM, STEP_ID_TO, 
                 OPE_NO_FROM, OPE_NO_TO,TIMELIMIT, PARTCODE, UPDATE_TIME)   
            WITH QTIME_DATA AS (                                                                
                SELECT F.PROD_ID,F.PLAN_ID,
                       S.TO_OPER_NO,S.FORM_OPER_NO,                                                     
                       FIRST_VALUE(F.STEP_ID IGNORE NULLS)
                       OVER(PARTITION BY F.PROD_ID, F.PLAN_ID, S.FORM_OPER_NO, S.TO_OPER_NO ORDER BY F.STEP_ID ROWS BETWEEN UNBOUNDED PRECEDING AND UNBOUNDED FOLLOWING) STEP_ID_FROM,
                       LAST_VALUE(F.STEP_ID IGNORE NULLS)         
                       OVER(PARTITION BY F.PROD_ID, F.PLAN_ID, S.FORM_OPER_NO, S.TO_OPER_NO ORDER BY F.STEP_ID ROWS BETWEEN UNBOUNDED PRECEDING AND UNBOUNDED FOLLOWING) STEP_ID_TO,      
                       S.QTIME_SPEC AS TIMELIMIT                                                
                FROM APS_SYNC_VIRT_QT_SETTING.APS_SYNC_VIRT_QT_SETTING S                         
                INNER JOIN APS_ETL_FLOW.APS_ETL_FLOW F                              
                ON                                        
                 F.PRODG_TECH LIKE REPLACE(S.TECH,'*','%')                                   
                AND F.PROD_ID LIKE REPLACE(S.PRODUCT_ID,'*','%')   
                AND F.PRODG_ID LIKE REPLACE(S.PRODG,'*','%')                                 
                AND (CASE WHEN F.OPE_NO = S.TO_OPER_NO THEN 1                                   
                          WHEN F.OPE_NO = S.FORM_OPER_NO THEN 1                                 
                          ELSE 0 END = 1)                                                       
                WHERE S.QTIME_SPEC IS NOT NULL AND S.QTIME_SPEC <> ''       
            )                                                                                  
            SELECT DISTINCT  '{uuid}'   AS PARENTID,                                           
                   PROD_ID,PLAN_ID,                                                             
                   STEP_ID_FROM,                                                                
                   STEP_ID_TO,
                   FORM_OPER_NO AS OPE_NO_FROM,
                   TO_OPER_NO AS OPE_NO_TO,                                                                  
                   TIMELIMIT,                                                                   
                   '' AS PARTCODE,                                                                   
                  '{current_time}' AS UPDATE_TIME                                                   
            FROM  QTIME_DATA                                                                   
            WHERE STEP_ID_FROM IS NOT NULL AND STEP_ID_FROM <> ''                                                     
                 AND STEP_ID_TO IS NOT NULL AND STEP_ID_TO <> ''                                                     
                 AND STEP_ID_FROM < STEP_ID_TO                                                                          
    """.format(uuid=uuid, current_time=current_time,tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_QTIME_SPEC_VIRT",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_QTIME_SPEC_VIRT")


def getGradeDataSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
         INSERT  /*+ append */  INTO {tempdb}APS_TMP_ETL_QTIME_SPEC_GRADE (CUSTOM_FIELD,PRODSPEC_ID,FLOW_KEY,FROM_OPE_NO,TO_OPE_NO)   
         WITH GARDE_DATA AS (                                                                                                                                 
             SELECT C.PRODSPEC_ID,C.FLOW_KEY,C.FROM_OPE_NO,C.TO_OPE_NO,C.CUSTOM_FIELD,
                   ROW_NUMBER() OVER(PARTITION BY C.PRODSPEC_ID,C.FLOW_KEY,C.FROM_OPE_NO,C.TO_OPE_NO ORDER BY C.CUSTOM_FIELD) AS RNT    
             FROM APS_SYNC_QTIME_CONSTRAINT.APS_SYNC_QTIME_CONSTRAINT C                                                                                                                                                                                      
         )                                                                                                                                                    
         SELECT CUSTOM_FIELD,PRODSPEC_ID,FLOW_KEY,FROM_OPE_NO,TO_OPE_NO                                                                  
         FROM GARDE_DATA                                                                                                                                      
         WHERE RNT = 1                                                                          
    """.format(uuid=uuid, current_time=current_time,tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_TMP_ETL_QTIME_SPEC_GRADE",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_TMP_ETL_QTIME_SPEC_GRADE")


def getAllQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name):
    sql = """
        INSERT  /*+ append */  INTO APS_ETL_QTIME_SPEC ( 
              PARENTID,PROD_ID, PLAN_ID, STEP_ID_FROM, STEP_ID_TO,
              OPE_NO_FROM, OPE_NO_TO, TIMELIMIT, UPDATE_TIME,PARTCODE,GRADE
        )  
       WITH SOURCE_DATA AS (                                                                            
           SELECT * FROM {tempdb}APS_TMP_ETL_QTIME_SPEC_PROD                                                    
           UNION ALL                                                                                    
           SELECT * FROM {tempdb}APS_TMP_ETL_QTIME_SPEC_VIRT                                                    
       )                                                                                                
       SELECT D.PARENTID,D.PROD_ID,                                                                     
              D.PLAN_ID,D.STEP_ID_FROM,                                                                 
              D.STEP_ID_TO,                                                                             
              MAX(D.OPE_NO_FROM) AS OPE_NO_FROM,                                                        
              MAX(D.OPE_NO_TO) AS OPE_NO_TO,                                                            
              CAST(MIN(D.TIMELIMIT) AS DECIMAL) AS TIMELIMIT,                                                            
              CAST(D.UPDATE_TIME AS TIMESTAMP),                                                                            
              D.PARTCODE,
              MAX(G.CUSTOM_FIELD) AS GRADE                                                                                
       FROM SOURCE_DATA D 
       LEFT JOIN {tempdb}APS_TMP_ETL_QTIME_SPEC_GRADE G 
       ON D.PLAN_ID = G.FLOW_KEY AND D.OPE_NO_FROM = G.FROM_OPE_NO 
       AND D.PROD_ID = G.PRODSPEC_ID AND D.OPE_NO_TO = G.TO_OPE_NO                                                                            
       GROUP BY D.PARENTID,D.PROD_ID,D.PLAN_ID,D.STEP_ID_FROM,D.STEP_ID_TO,D.PARTCODE,D.UPDATE_TIME                                                                        
    """.format(uuid=uuid, current_time=current_time,tempdb=my_duck.get_temp_table_mark())

    my_duck.exec_sql(oracle_conn=oracle_conn,
                     duck_db_memory=duck_db_memory,
                     ETL_Proc_Name=ETL_Proc_Name,
                     methodName="Insert Into APS_ETL_QTIME_SPEC",
                     sql=sql,
                     current_time=current_time,
                     update_table="APS_ETL_QTIME_SPEC")


def execute():
    ###############################################################
    ### 以下参数必须定义
    ### ETL_Proc_Name    : ETL 名称
    ### current_time     ：请直接拷贝
    ### current_time_short ：请直接拷贝
    ### uuid             ：请直接拷贝
    ### target_table     : 该ETL输出表名
    ### used_table_list  : 该ETL使用到的，参考到的表名(中间表不算)
    ### target_table_sql ： 该ETL输出表定义SQL
    ###############################################################
    ETL_Proc_Name = "APS_ETL_BR.APS_ETL_QTIME_SPEC_720M"
    current_time = my_date.date_time_second_str()
    current_time_short = my_date.date_time_second_short_str()
    uuid = my_oracle.UUID()

    target_table = "APS_ETL_QTIME_SPEC"
    used_table_list = ['APS_ETL_FLOW',
                       'APS_SYNC_QTIME_CONSTRAINT',
                       'APS_SYNC_VIRT_QT_SETTING'
                       ]
    target_table_sql = """
        create table {}APS_ETL_QTIME_SPEC
        (
            parentid     VARCHAR(64) not null,
            prod_id      VARCHAR(64) not null,
            plan_id      VARCHAR(64) not null,
            step_id_from VARCHAR(64) not null,
            step_id_to   VARCHAR(64) not null,
            ope_no_from  VARCHAR(64),
            ope_no_to    VARCHAR(64),
            update_time  TIMESTAMP not null,
            timelimit    DECIMAL not null,
            partcode     VARCHAR(64) not null,
            GRADE        VARCHAR(64),
            PRIMARY KEY (PARENTID, PROD_ID, PLAN_ID, STEP_ID_FROM, STEP_ID_TO, PARTCODE)
        )
    """.format("")  # 注意:这里一定要这么写 [create table 表名] => [create table {}表名]
    target_db_file = my_duck.get_target_file_name(target_table, current_time_short)
    # -------------------------- 内存模式改成文件模式
    _temp_db_path = os.path.join(config.g_mem_speed_etl_output_path, target_table, "inprocess")
    if not os.path.exists(_temp_db_path):
        os.makedirs(_temp_db_path)

    temp_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + "_temp.db")
    # 处理中文件
    in_process_db_file = os.path.join(_temp_db_path, target_table + "_" + current_time_short + ".db")
    # 结果文件
    target_db_file = os.path.join(config.g_mem_etl_output_path, target_table,
                                  target_table + "_" + current_time_short + ".db")
    # --------------------------

    oracle_conn = None
    try:
        oracle_conn = my_oracle.oracle_get_connection()
        # 开始日志
        my_oracle.StartCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
        # -------------------------- 内存模式改成文件模式
        # 创建DuckDB
        duck_db_memory = my_duck.create_duckdb_in_file(_temp_db_path, in_process_db_file, target_table_sql)
        duck_db_memory.sql('SET threads TO 4')
        if not os.path.exists(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)):
            os.makedirs(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid))
        duck_db_memory.execute(
            "SET temp_directory='{}'".format(os.path.join(config.g_mem_speed_etl_output_path, 'duck_temp', uuid)))

        if not config.g_debug_mode:
            create_temp_table(duck_db_memory)
        else:
            duck_db_temp = my_duck.create_duckdb_for_temp_table(_temp_db_path, temp_db_file)
            # 创建Temp表
            create_temp_table(duck_db_temp)
            duck_db_temp.commit()
            duck_db_temp.close()
            my_duck.attach_temp_db_write_able(duck_db_memory, "TEMPDB", temp_db_file)
        # --------------------------

        # Attach用到的表
        res_dict = my_duck.attach_used_table(oracle_conn, duck_db_memory, used_table_list)
        ################################################################################################################
        ## 以下为业务逻辑
        ################################################################################################################

        # 保存Qtime信息
        getQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 保存虚拟Qtime信息
        getVirtQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 获取Qtime等级资讯
        getGradeDataSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)
        # 合并放到最终Table
        getAllQtimeSpecSql(duck_db_memory, uuid, current_time, oracle_conn, ETL_Proc_Name)

        ################################################################################################################
        ## 写入log
        ################################################################################################################
        # 写版本号
        my_oracle.Monitor_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)

        ################################################################################################################
        ## 以上为业务逻辑
        ################################################################################################################
        my_duck.detach_all_used_table(duck_db_memory, res_dict)
        if config.g_copy_to_pg and my_runner.judge_main_server(oracle_conn):
            select_sql_in_duck = """select parentid,prod_id, plan_id,
                                           CASE WHEN step_id_from='' THEN NULL ELSE step_id_from END AS step_id_from,
                                           CASE WHEN step_id_to='' THEN NULL ELSE step_id_to END AS step_id_to,
                                           timelimit,update_time,
                                           CASE WHEN grade='' THEN NULL ELSE grade END AS grade 
                                           from APS_ETL_QTIME_SPEC
                                 """
            postgres_table_define = """etl_qtime_spec(parentid,prod_id, plan_id,step_id_from,step_id_to,
                                                      timelimit,update_time,grade)
                                    """
            my_postgres.copy_duckdb_to_postgres(uuid=uuid,
                                                duckdb=duck_db_memory,
                                                table_name_in_duckdb=target_table,
                                                table_name_in_pg="etl_qtime_spec",  # 要小写
                                                select_sql_in_duck=select_sql_in_duck,
                                                postgres_table_define=postgres_table_define,
                                                oracle_conn=oracle_conn,
                                                ETL_Proc_Name=ETL_Proc_Name)
        # 导出到目标文件中
        # target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory(duck_db_memory,
        #                                                                           target_table,
        #                                                                           target_table_sql.format("file_db."),
        #                                                                           current_time_short)
        target_db_file = my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                                   in_process_db_file=in_process_db_file,
                                                                                   target_table=target_table,
                                                                                   current_time=current_time_short)
        # 写版本号
        my_oracle.HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 加入PG执行结束的时间更新
        my_oracle.Update_PG_HandlingVerControl(oracle_conn, uuid, target_table, target_db_file, current_time_short)
        # 写完成日志
        my_oracle.EndCleanUpAndLog(oracle_conn, ETL_Proc_Name, current_time)
    except Exception as e:
        # 写警告日志
        my_oracle.SaveAlarmLogData(oracle_conn, ETL_Proc_Name, e, target_db_file,
                                  cons_error_code.APS_ETL_QTIME_SPEC_CODE_XX_ETL)
        logging.exception("{ETL_Proc_Name} 處理出錯 : {e}".format(ETL_Proc_Name=ETL_Proc_Name, e=e))
        # 导出到目标文件中
        my_duck.export_result_duck_file_and_close_duck_db_memory2(duck_db_memory,
                                                                  in_process_db_file=in_process_db_file,
                                                                  target_table=target_table,
                                                                  current_time=current_time_short)
        raise e
    finally:
        oracle_conn.commit()
        oracle_conn.close()
        if os.path.exists(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid)):
            os.remove(os.path.join(config.g_mem_etl_output_path, 'duck_temp', uuid))
        if os.path.exists(temp_db_file) and not config.g_debug_mode:
            os.remove(temp_db_file)
        gc.collect()  # 内存释放

if __name__ == '__main__':
    # 单JOB测试用
    print("start")
    execute()
